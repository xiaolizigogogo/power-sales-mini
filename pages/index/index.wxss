.loading-container {
  height: 100vh;
}

.not-login-container {
  height: 100vh;
  padding: 40rpx;
}

.welcome-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: var(--font-size-large);
  margin-bottom: 60rpx;
}

.logged-container {
  padding: 20rpx;
}

.user-card {
  margin-bottom: 30rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.grid-item {
  padding: 20rpx;
}

.grid-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.statistics-area {
  margin-top: 30rpx;
}

.stat-item {
  flex: 1;
  padding: 20rpx;
} 