.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #fff;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: var(--font-size-small);
  color: #999;
}

.login-form {
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: var(--font-size-base);
  color: #333;
}

input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: var(--font-size-base);
  box-sizing: border-box;
}

.login-button {
  width: 100%;
  height: 88rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-loading {
  opacity: 0.8;
}

.form-footer {
  margin-top: 30rpx;
  text-align: center;
  font-size: var(--font-size-base);
}

.login-tips {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
} 