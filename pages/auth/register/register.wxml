<view class="page-container">
  <custom-navbar 
    title="注册账号" 
    bgColor="#409EFF"
  />
  
  <view class="container">
    <view class="register-header">
      <image src="/assets/images/logo.png" mode="aspectFit" class="logo" />
      <text class="title">电力渠道销售平台</text>
      <text class="subtitle">注册成为我们的合作伙伴</text>
    </view>

    <view class="form-group">
      <text class="form-label required">手机号</text>
      <input 
        class="form-input"
        type="number"
        maxlength="11"
        placeholder="请输入手机号"
        value="{{form.phone}}"
        data-field="phone"
        bindinput="onInput"
      />
    </view>

    <view class="form-group">
      <text class="form-label required">验证码</text>
      <view class="code-input-group">
        <input 
          class="form-input code-input"
          type="number"
          maxlength="6"
          placeholder="请输入验证码"
          value="{{form.code}}"
          data-field="code"
          bindinput="onInput"
        />
        <button 
          class="code-button {{countdown > 0 ? 'disabled' : ''}}"
          bindtap="sendCode"
        >
          {{countdown > 0 ? countdown + 's' : '获取验证码'}}
        </button>
      </view>
    </view>

    <view class="form-group">
      <text class="form-label required">设置密码</text>
      <input 
        class="form-input"
        type="password"
        placeholder="请设置登录密码，不少于6位"
        value="{{form.password}}"
        data-field="password"
        bindinput="onInput"
      />
    </view>

    <view class="form-group">
      <text class="form-label required">确认密码</text>
      <input 
        class="form-input"
        type="password"
        placeholder="请再次输入密码"
        value="{{form.confirmPassword}}"
        data-field="confirmPassword"
        bindinput="onInput"
      />
    </view>

    <button 
      class="submit-button {{loading ? 'loading' : ''}}" 
      bindtap="handleSubmit"
      disabled="{{loading}}"
    >
      <text>{{loading ? '注册中...' : '立即注册'}}</text>
    </button>

    <view class="register-footer">
      <text class="register-footer-text">已有账号？</text>
      <text class="register-footer-link" bindtap="goToLogin">立即登录</text>
    </view>

    <view class="register-notice">
      <text class="register-notice-text">注册即代表同意</text>
      <text class="register-notice-link">《用户服务协议》</text>
      <text class="register-notice-text">和</text>
      <text class="register-notice-link">《隐私政策》</text>
    </view>
  </view>
</view> 