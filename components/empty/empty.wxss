.custom-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.custom-empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.custom-empty-description {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 30rpx;
}

.custom-empty-button {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #409EFF 0%, #337ECC 100%);
  border-radius: 12rpx;
  border: none;
}

.custom-empty-button::after {
  display: none;
} 