/* 颜色变量 */
:root {
  /* 主题色 */
  --primary-color: #409EFF;
  --primary-light: #a0cfff;
  --primary-dark: #337ECC;
  
  /* 功能色 */
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --danger-color: #ef4444;
  --info-color: #6b7280;
  
  /* 中性色 */
  --text-primary: #1f2937;
  --text-regular: #374151;
  --text-secondary: #6b7280;
  --text-placeholder: #9ca3af;
  
  /* 边框色 */
  --border-color: #e5e7eb;
  --border-light: #f3f4f6;
  
  /* 背景色 */
  --bg-color: #f5f7fa;
  --bg-white: #ffffff;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  
  /* 圆角 */
  --border-radius-sm: 8rpx;
  --border-radius-base: 12rpx;
  --border-radius-lg: 16rpx;
  --border-radius-xl: 24rpx;
  
  /* 间距 */
  --spacing-xs: 10rpx;
  --spacing-sm: 20rpx;
  --spacing-base: 30rpx;
  --spacing-lg: 40rpx;
  --spacing-xl: 50rpx;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  --shadow-base: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 16rpx rgba(0, 0, 0, 0.12);
  
  /* 动画 */
  --transition-base: all 0.3s ease;
  
  /* 文本样式 */
  --text-muted: #6b7280;
  --text-disabled: #d1d5db;
  
  /* 边框色 */
  --border-dark: #d1d5db;
  
  /* 背景色 */
  --bg-light: #f9fafb;
  --bg-dark: #f3f4f6;
  
  /* 圆角 */
  --radius-small: 8rpx;
  --radius-base: 12rpx;
  --radius-large: 16rpx;
  --radius-round: 50%;
  
  /* 间距 */
  --spacing-xxl: 32rpx;
  
  /* 字体大小 */
  --font-size-xxl: 40rpx;
  
  /* 行高 */
  --line-height-tight: 1.2;
  --line-height-base: 1.5;
  --line-height-loose: 1.8;
  
  /* 层级 */
  --z-index-base: 1;
  --z-index-popup: 1000;
  --z-index-modal: 2000;
  --z-index-toast: 3000;
}