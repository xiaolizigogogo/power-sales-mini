/* 全局配置组件样式 */
.global-config {
  display: none;
}

/* 配置加载状态 */
.config-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

/* 调试信息样式 */
.config-debug {
  position: fixed;
  top: 0;
  right: 0;
  width: 500rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 20rpx;
  font-size: 24rpx;
  z-index: 9998;
  max-height: 400rpx;
  overflow-y: auto;
}

.debug-title {
  display: block;
  font-weight: bold;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #333;
  padding-bottom: 8rpx;
}

.debug-item {
  display: flex;
  margin-bottom: 8rpx;
}

.debug-label {
  width: 160rpx;
  color: #ccc;
}

.debug-value {
  flex: 1;
  color: #fff;
} 