/* 签名组件样式 */
.signature-pad {
  width: 100%;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.signature-canvas {
  width: 100%;
  height: 300rpx;
  background: white;
  border: 2rpx solid #ebedf0;
  border-radius: 12rpx 12rpx 0 0;
  display: block;
}

.signature-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #f7f8fa;
  border-top: 1rpx solid #ebedf0;
}

.action-tip {
  font-size: 24rpx;
  color: #969799;
  flex: 1;
}

.action-btn {
  font-size: 26rpx;
  color: #1989fa;
  padding: 12rpx 24rpx;
  border: 1rpx solid #1989fa;
  border-radius: 20rpx;
  background: white;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #1989fa;
  color: white;
  transform: scale(0.95);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .signature-canvas {
    height: 250rpx;
  }
  
  .signature-actions {
    padding: 15rpx 20rpx;
  }
  
  .action-tip {
    font-size: 22rpx;
  }
  
  .action-btn {
    font-size: 24rpx;
    padding: 10rpx 20rpx;
  }
} 