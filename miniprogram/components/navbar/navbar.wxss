.navbar {
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
}

.navbar.fixed {
  position: fixed;
  top: 0;
  left: 0;
}

.navbar-content {
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.navbar-back {
  position: absolute;
  left: 32rpx;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid;
  border-bottom: 4rpx solid;
  transform: rotate(45deg);
}

.navbar-title {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
} 