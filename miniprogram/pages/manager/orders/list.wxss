.manager-order-list-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.search-bar {
  background: #fff;
  padding: 20rpx 0 10rpx 0;
}

.order-list {
  margin: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-id {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  font-weight: 500;
}

.order-content {
  margin-bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  color: #333;
  font-size: 26rpx;
}

.amount {
  color: #ff4d4f;
  font-weight: 500;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.action-btn {
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 6rpx;
  min-width: 120rpx;
  text-align: center;
  white-space: nowrap;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.load-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 32rpx 0;
}

.loading {
  text-align: center;
  color: #999;
  padding: 32rpx 0;
} 