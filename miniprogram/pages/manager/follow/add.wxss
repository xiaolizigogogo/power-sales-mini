/* pages/manager/follow/add.wxss */
.follow-add-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 客户信息卡片 */
.customer-card {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  display: flex;
  align-items: center;
  padding: 30rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.customer-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -30%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.customer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.avatar-text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.customer-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.customer-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.customer-company {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 5rpx;
}

.customer-position {
  font-size: 22rpx;
  opacity: 0.8;
}

.customer-status {
  position: relative;
  z-index: 1;
}

.status-tag {
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

/* 表单容器 */
.form-container {
  padding: 20rpx 30rpx 0;
}

/* 表单节 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.required {
  color: #ff4d4f;
  margin-left: 5rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 跟进类型 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 15rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  background: #fafafa;
}

.type-item.selected {
  border-color: #52c41a;
  background: #f6ffed;
  transform: scale(1.05);
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  font-size: 32rpx;
}

.type-label {
  font-size: 22rpx;
  color: #333;
  text-align: center;
}

/* 快速模板 */
.template-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.template-btn {
  padding: 15rpx 25rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.template-btn:active {
  background: #52c41a;
  color: white;
  border-color: #52c41a;
}

/* 输入框组 */
.input-group {
  position: relative;
}

.form-input {
  width: 100%;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: #52c41a;
  outline: none;
}

.input-counter {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  font-size: 20rpx;
  color: #999;
}

/* 文本域组 */
.textarea-group {
  position: relative;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 25rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fff;
  transition: border-color 0.3s ease;
}

.form-textarea:focus {
  border-color: #52c41a;
  outline: none;
}

.textarea-counter {
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
  font-size: 20rpx;
  color: #999;
  background: rgba(255, 255, 255, 0.9);
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
}

/* 优先级选择器 */
.priority-selector {
  display: flex;
  gap: 20rpx;
}

.priority-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx 15rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  background: #fafafa;
}

.priority-item.selected {
  border-color: #52c41a;
  background: #f6ffed;
}

.priority-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.priority-label {
  font-size: 26rpx;
  color: #333;
}

/* 日期时间组 */
.datetime-group {
  display: flex;
  gap: 20rpx;
}

.datetime-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  background: #fff;
  transition: all 0.3s ease;
  position: relative;
}

.datetime-item:active {
  border-color: #52c41a;
}

.datetime-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.datetime-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.datetime-icon {
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 标签相关 */
.common-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 25rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.tag-item.selected {
  background: #52c41a;
  color: white;
  border-color: #52c41a;
}

.tag-item.add-tag {
  color: #52c41a;
  border-color: #52c41a;
}

.add-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  filter: brightness(0) saturate(100%) invert(60%) sepia(96%) saturate(455%) hue-rotate(75deg) brightness(98%) contrast(84%);
}

.selected-tags {
  margin-bottom: 25rpx;
}

.selected-tags-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.selected-tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 15rpx;
  background: #52c41a;
  color: white;
  border-radius: 15rpx;
  font-size: 22rpx;
}

.remove-icon {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
  filter: brightness(0) invert(1);
}

.tag-input-group {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-top: 20rpx;
}

.tag-input {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 25rpx;
  font-size: 24rpx;
  background: #fff;
}

.tag-input:focus {
  border-color: #52c41a;
}

.tag-input-actions {
  display: flex;
  gap: 10rpx;
}

.tag-input-btn {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  text-align: center;
  min-width: 80rpx;
}

.tag-input-btn.cancel {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.tag-input-btn.confirm {
  background: #52c41a;
  color: white;
}

/* 附件相关 */
.attachment-add {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 30rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  margin-bottom: 25rpx;
}

.attachment-add:active {
  border-color: #52c41a;
  background: #f6ffed;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 22rpx;
  color: #999;
}

.attachment-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.attachment-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.file-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.file-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.file-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.file-size {
  font-size: 22rpx;
  color: #999;
}

.attachment-remove {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff4d4f;
  border-radius: 50%;
  margin-left: 15rpx;
}

.attachment-remove .remove-icon {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.action-left {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  text-align: center;
  min-width: 120rpx;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.action-right {
  flex: 1;
  margin-left: 20rpx;
}

.submit-btn {
  width: 100%;
  padding: 25rpx;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(82, 196, 26, 0.3);
  transition: all 0.3s ease;
}

.submit-btn.loading {
  background: #d9d9d9;
  box-shadow: none;
  opacity: 0.7;
}

.submit-btn:not(.loading):active {
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeIn 0.5s ease;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .form-container {
    padding: 20rpx 20rpx 0;
  }
  
  .form-section {
    padding: 25rpx 20rpx;
  }
  
  .type-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .datetime-group {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .priority-selector {
    flex-direction: column;
    gap: 15rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .follow-add-container {
    background-color: #1a1a1a;
  }
  
  .form-section {
    background: #2a2a2a;
    color: #ffffff;
  }
  
  .section-title {
    color: #ffffff;
  }
  
  .form-input,
  .form-textarea {
    background: #333333;
    border-color: #444444;
    color: #ffffff;
  }
  
  .datetime-item {
    background: #333333;
    border-color: #444444;
  }
  
  .tag-item {
    background: #333333;
    border-color: #444444;
    color: #ffffff;
  }
} 