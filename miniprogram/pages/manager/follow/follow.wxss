/* pages/manager/follow/follow.wxss */

/* 基础变量定义 */
page {
  --primary-color: #4A90E2;
  --success-color: #00b894;
  --warning-color: #fdcb6e;
  --error-color: #e17055;
  --info-color: #74b9ff;
  --bg-color-white: #ffffff;
  --bg-color-light: #f5f6fa;
  --text-color-primary: #2d3436;
  --text-color-secondary: #636e72;
  --text-color-tertiary: #b2bec3;
  --border-color-light: #ddd;
}

.container {
  background-color: var(--bg-color-light);
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部菜单栏留出更多空间，避免遮挡 */
}

/* 标签页导航样式 */
.tabs-container {
  background-color: var(--bg-color-white);
  border-bottom: 2rpx solid var(--border-color-light);
}

.tabs-nav {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  position: relative;
  font-size: 30rpx;
  color: var(--text-color-secondary);
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  padding: 20rpx;
  background-color: var(--bg-color-white);
  border-bottom: 2rpx solid var(--border-color-light);
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.filter-item {
  flex: 1;
  min-width: 0;
}

.filter-item:last-child {
  margin-right: 0;
}

.picker-text {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background-color: var(--bg-color-light);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-color-primary);
  min-height: 68rpx;
  box-sizing: border-box;
}

.search-item {
  flex: 1.5;
  position: relative;
}

.search-input {
  width: 100%;
  height: 68rpx;
  padding: 0 60rpx 0 20rpx;
  background-color: var(--bg-color-light);
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-item .icon-search {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-color-secondary);
  font-size: 32rpx;
}

/* 统计信息栏 */
.stats-bar {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: var(--bg-color-white);
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background-color: var(--border-color-light);
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* 快速操作栏 */
.quick-actions {
  display: flex;
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 20rpx;
  background-color: var(--bg-color-light);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-color-primary);
  border: 2rpx solid var(--border-color-light);
}

.action-btn.primary {
  background-color: var(--primary-color);
  color: var(--bg-color-white);
  border-color: var(--primary-color);
}

/* 跟进列表 */
.follow-list {
  padding: 0 20rpx;
}

.follow-item {
  background-color: var(--bg-color-white);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-left: 8rpx solid var(--border-color-light);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.follow-item.urgent {
  border-left-color: var(--error-color);
}

.follow-item.selected {
  border-left-color: var(--primary-color);
  background-color: rgba(74, 144, 226, 0.02);
}

.follow-item:active {
  transform: scale(0.98);
}

/* 选择框 */
.select-checkbox {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.select-checkbox .iconfont {
  font-size: 40rpx;
  color: var(--primary-color);
}

/* 项目头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.customer-info {
  flex: 1;
}

.customer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color-primary);
  margin-bottom: 8rpx;
}

.company-name {
  display: block;
  font-size: 26rpx;
  color: var(--text-color-secondary);
  margin-bottom: 12rpx;
}

.status-badges {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.badge {
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: var(--bg-color-white);
}

.badge.status-pending {
  background-color: var(--warning-color);
}

.badge.status-completed {
  background-color: var(--success-color);
}

.badge.status-scheduled {
  background-color: var(--info-color);
}

.badge.status-overdue {
  background-color: var(--error-color);
}

.badge.priority-high {
  background-color: var(--error-color);
}

.item-actions {
  display: flex;
  gap: 20rpx;
}

.phone-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background-color: var(--success-color);
  color: var(--bg-color-white);
  font-size: 24rpx;
}

/* 跟进内容 */
.follow-content {
  margin-bottom: 20rpx;
}

.follow-type {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-icon {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.type-icon.call {
  background-color: var(--success-color);
}

.type-icon.visit {
  background-color: var(--primary-color);
}

.type-icon.wechat {
  background-color: var(--warning-color);
}

.type-icon.email {
  background-color: var(--info-color);
}

.type-icon.meeting {
  background-color: var(--error-color);
}

.type-text {
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

.follow-desc {
  font-size: 30rpx;
  color: var(--text-color-primary);
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.follow-result {
  background-color: var(--bg-color-light);
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

.result-label {
  font-size: 26rpx;
  color: var(--text-color-secondary);
}

.result-text {
  font-size: 28rpx;
  color: var(--text-color-primary);
  margin-top: 8rpx;
}

/* 项目底部 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.time-info {
  flex: 1;
}

.follow-time,
.next-follow {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: 8rpx;
}

.follow-time:last-child,
.next-follow:last-child {
  margin-bottom: 0;
}

.next-follow.overdue {
  color: var(--error-color);
}

.time-info .iconfont {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.operation-btns {
  display: flex;
  gap: 20rpx;
}

.op-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--primary-color);
  background-color: rgba(74, 144, 226, 0.1);
  border: 2rpx solid var(--primary-color);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: var(--text-color-secondary);
  margin-bottom: 40rpx;
}

.empty-action {
  padding: 20rpx 40rpx;
  background-color: var(--primary-color);
  color: var(--bg-color-white);
  border-radius: 12rpx;
  font-size: 28rpx;
  display: inline-block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: var(--text-color-secondary);
}

/* 调试信息 */
.debug-info {
  background-color: #f0f0f0;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1.5;
}

.debug-info text {
  display: block;
  margin-bottom: 8rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
  z-index: 100;
  color: var(--bg-color-white);
  font-size: 48rpx;
  font-weight: bold;
}

/* 批量操作栏 */
.batch-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-color-white);
  padding: 20rpx;
  border-top: 2rpx solid var(--border-color-light);
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 200;
}

.batch-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: var(--text-color-primary);
}

.select-all {
  color: var(--primary-color);
  font-size: 28rpx;
}

.batch-btns {
  display: flex;
  gap: 20rpx;
}

.batch-btn {
  flex: 1;
  padding: 24rpx;
  background-color: var(--primary-color);
  color: var(--bg-color-white);
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.batch-btn.danger {
  background-color: var(--error-color);
}

/* 弹窗样式 */
.modal-content {
  background-color: var(--bg-color-white);
  border-radius: 16rpx;
  overflow: hidden;
  max-height: 80vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--border-color-light);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color-primary);
}

.modal-header .icon-close {
  font-size: 40rpx;
  color: var(--text-color-secondary);
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid var(--border-color-light);
}

/* 客户选择弹窗 */
.customer-modal {
  max-height: 70vh;
}

.customer-list {
  margin-top: 20rpx;
}

.customer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid var(--border-color-light);
  transition: background-color 0.3s ease;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-item.selected {
  background-color: rgba(74, 144, 226, 0.05);
}

.customer-info {
  flex: 1;
}

.customer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-primary);
  margin-bottom: 8rpx;
}

.company-name {
  font-size: 26rpx;
  color: var(--text-color-secondary);
  margin-bottom: 6rpx;
}

.customer-phone {
  font-size: 24rpx;
  color: var(--text-color-tertiary);
}

.customer-status {
  margin-left: 20rpx;
}

/* 筛选面板 */
.filter-panel {
  width: 600rpx;
  height: 100vh;
  background-color: var(--bg-color-white);
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--border-color-light);
}

.filter-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color-primary);
}

.filter-reset {
  color: var(--primary-color);
  font-size: 28rpx;
}

.filter-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-primary);
  margin-bottom: 20rpx;
  display: block;
}

.filter-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid var(--border-color-light);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .stats-bar {
    flex-wrap: wrap;
  }
  
  .stat-item {
    flex: 1 1 50%;
    margin-bottom: 20rpx;
  }
  
  .quick-actions {
    flex-wrap: wrap;
  }
  
  .action-btn {
    flex: 1 1 calc(50% - 10rpx);
  }
}

/* 弹窗通用样式 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.form-section {
  padding: 32rpx;
  border-bottom: 16rpx solid #f7f8fa;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-actions {
  padding: 32rpx;
  background: #fff;
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

/* 需求分析弹窗样式 */
.needs-analysis-container {
  max-height: 90vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.needs-analysis-container .van-checkbox-group {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.needs-analysis-container .van-checkbox {
  margin-bottom: 0;
}

/* 产品推荐弹窗样式 */
.product-recommend-container {
  max-height: 90vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.product-list {
  padding: 32rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-info {
  flex: 1;
  margin-right: 16rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ee0a24;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.recommend-reason {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.estimated-saving {
  font-size: 24rpx;
  color: #07c160;
}

/* 跟进记录添加弹窗样式 */
.add-follow-container {
  max-height: 90vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.customer-selector,
.follow-type-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
}

.type-info {
  display: flex;
  align-items: center;
}

.type-info .van-icon {
  margin-right: 16rpx;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.button-group .van-button {
  margin: 0;
}

/* 表单验证错误提示 */
.error-text {
  font-size: 24rpx;
  color: #ee0a24;
  margin-top: 8rpx;
}

/* 空状态样式 */
.van-empty {
  padding: 64rpx 32rpx;
}

/* 下拉菜单样式 */
.van-dropdown-menu {
  box-shadow: none !important;
  height: 88rpx !important;
}

.van-dropdown-item {
  margin-top: 0 !important;
}

/* 复选框样式 */
.van-checkbox__label {
  font-size: 28rpx !important;
  color: #333 !important;
}

/* 输入框样式 */
.van-field__input {
  min-height: 88rpx !important;
}

.van-field__body {
  background: #f7f8fa !important;
  border-radius: 8rpx !important;
  padding: 0 24rpx !important;
} 