/* pages/manager/performance/index.wxss */
.performance-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部菜单栏留出更多空间，避免遮挡 */
}

/* 时间周期选择器 */
.period-selector {
  display: flex;
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.period-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.period-item.active {
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%);
  color: white;
}

/* 业绩概览 */
.performance-overview {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ranking-badge {
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.ranking-text {
  font-size: 22rpx;
}

.performance-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.amount-section {
  flex: 1;
}

.current-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #722ed1;
  display: block;
  margin-bottom: 10rpx;
}

.amount-details {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.target-text {
  font-size: 24rpx;
  color: #666;
}

.completion-rate {
  font-size: 24rpx;
  font-weight: bold;
}

.completion-rate.good {
  color: #52c41a;
}

.completion-rate.warning {
  color: #faad14;
}

.growth-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.growth-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 5rpx;
}

.growth-icon {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.growth-text {
  font-size: 24rpx;
  font-weight: bold;
}

.growth-indicator.positive {
  color: #52c41a;
}

.growth-indicator.negative {
  color: #ff4d4f;
}

.growth-label {
  font-size: 22rpx;
  color: #666;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #722ed1 0%, #531dab 100%);
  transition: width 0.5s ease;
}

/* 月度目标进度 */
.monthly-target {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.target-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: bold;
}

.target-status.on-track {
  background: #f6ffed;
  color: #52c41a;
}

.target-status.behind {
  background: #fff1f0;
  color: #ff4d4f;
}

.target-content {
  margin-top: 20rpx;
}

.target-numbers {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.target-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.target-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #722ed1;
  display: block;
  margin-bottom: 8rpx;
}

.target-label {
  font-size: 24rpx;
  color: #666;
}

/* 业绩分解 */
.performance-breakdown {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.breakdown-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-top: 20rpx;
}

.breakdown-item {
  background: #f8f9fa;
  padding: 25rpx;
  border-radius: 12rpx;
  text-align: center;
}

.breakdown-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #722ed1;
  display: block;
  margin-bottom: 8rpx;
}

.breakdown-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.breakdown-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
  display: block;
}

/* 趋势图表 */
.trend-chart {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-controls {
  display: flex;
  gap: 20rpx;
}

.chart-btn {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  transition: all 0.3s ease;
}

.chart-btn.active {
  background: #722ed1;
  color: white;
}

.chart-content {
  margin-top: 25rpx;
}

.trend-list {
  display: flex;
  justify-content: space-between;
  align-items: end;
  height: 200rpx;
  gap: 10rpx;
}

.trend-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.trend-month {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.trend-bar {
  width: 30rpx;
  height: 120rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  position: relative;
  overflow: hidden;
}

.trend-fill {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%);
  transition: height 0.5s ease;
}

.trend-amount {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 团队排行榜 */
.team-ranking {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.ranking-list {
  margin-top: 20rpx;
}

.ranking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-item.highlight {
  background: rgba(114, 46, 209, 0.1);
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 5rpx 0;
}

.ranking-info {
  display: flex;
  align-items: center;
}

.rank-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
}

.rank-badge.rank-1 {
  background: #ffd700;
}

.rank-badge.rank-2 {
  background: #c0c0c0;
}

.rank-badge.rank-3 {
  background: #cd7f32;
}

.rank-badge.rank-other {
  background: #d9d9d9;
  color: #666;
}

.rank-number {
  font-size: 20rpx;
}

.member-name {
  font-size: 28rpx;
  color: #333;
}

.performance-info {
  display: flex;
  flex-direction: column;
  align-items: end;
}

.member-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #722ed1;
  margin-bottom: 5rpx;
}

.member-growth {
  font-size: 22rpx;
  font-weight: bold;
}

.member-growth.positive {
  color: #52c41a;
}

.member-growth.negative {
  color: #ff4d4f;
}

/* 业绩分析 */
.performance-analysis {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.analysis-content {
  margin-top: 20rpx;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.analysis-item:last-child {
  border-bottom: none;
}

.analysis-label {
  font-size: 28rpx;
  color: #333;
}

.analysis-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #722ed1;
}

.improvement-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.improvement-tag {
  background: #f0f0f0;
  color: #666;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.more-btn {
  font-size: 24rpx;
  color: #722ed1;
  font-weight: bold;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner text {
  font-size: 28rpx;
  color: #722ed1;
  margin-top: 20rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 头部总览 */
.header-overview {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.header-overview::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.overview-content {
  position: relative;
  z-index: 1;
}

.overview-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.title-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  filter: brightness(0) invert(1);
}

.overview-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-change {
  font-size: 20rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}

.change-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 5rpx;
}

.stat-change.positive {
  color: #b7eb8f;
}

.stat-change.negative {
  color: #ffccc7;
}

/* 时间切换 */
.time-selector {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.time-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 6rpx;
}

.time-tab {
  flex: 1;
  text-align: center;
  padding: 15rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.time-tab.active {
  background: #52c41a;
  color: white;
}

/* 业绩详情卡片 */
.performance-cards {
  padding: 0 30rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
}

.card-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  filter: brightness(0) saturate(100%) invert(19%) sepia(0%) saturate(4%) hue-rotate(318deg) brightness(89%) contrast(84%);
}

.more-btn {
  font-size: 24rpx;
  color: #1890ff;
  display: flex;
  align-items: center;
}

.more-btn image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 5rpx;
}

/* 目标完成率 */
.target-progress {
  margin-bottom: 30rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #333;
}

.progress-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 6rpx;
  transition: width 0.8s ease;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.target-details {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.detail-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #666;
}

/* 业绩数据 */
.performance-data {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin: 0 8rpx;
}

.data-item:first-child {
  margin-left: 0;
}

.data-item:last-child {
  margin-right: 0;
}

.data-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 8rpx;
}

.data-label {
  font-size: 24rpx;
  color: #666;
}

.data-change {
  font-size: 20rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}

.data-change.positive {
  color: #52c41a;
}

.data-change.negative {
  color: #ff4d4f;
}

.data-change.neutral {
  color: #999;
}

/* 团队排行 */
.ranking-list {
  display: flex;
  flex-direction: column;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  color: white;
}

.ranking-number.top1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb300 100%);
}

.ranking-number.top2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a0a0a0 100%);
}

.ranking-number.top3 {
  background: linear-gradient(135deg, #cd7f32 0%, #a0522d 100%);
}

.ranking-number.current {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.ranking-number.other {
  background: #f0f0f0;
  color: #666;
}

.ranking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ranking-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.ranking-department {
  font-size: 22rpx;
  color: #666;
}

.ranking-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
  text-align: right;
}

/* 业绩趋势图 */
.chart-container {
  height: 400rpx;
  background: white;
  border-radius: 12rpx;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
