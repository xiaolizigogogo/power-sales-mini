/* pages/manager/performance/index.wxss */
.performance-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 头部总览 */
.header-overview {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.header-overview::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.overview-content {
  position: relative;
  z-index: 1;
}

.overview-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.title-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  filter: brightness(0) invert(1);
}

.overview-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-change {
  font-size: 20rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}

.change-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 5rpx;
}

.stat-change.positive {
  color: #b7eb8f;
}

.stat-change.negative {
  color: #ffccc7;
}

/* 时间切换 */
.time-selector {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.time-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 6rpx;
}

.time-tab {
  flex: 1;
  text-align: center;
  padding: 15rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.time-tab.active {
  background: #52c41a;
  color: white;
}

/* 业绩详情卡片 */
.performance-cards {
  padding: 0 30rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
}

.card-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  filter: brightness(0) saturate(100%) invert(19%) sepia(0%) saturate(4%) hue-rotate(318deg) brightness(89%) contrast(84%);
}

.more-btn {
  font-size: 24rpx;
  color: #1890ff;
  display: flex;
  align-items: center;
}

.more-btn image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 5rpx;
}

/* 目标完成率 */
.target-progress {
  margin-bottom: 30rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #333;
}

.progress-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 6rpx;
  transition: width 0.8s ease;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.target-details {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.detail-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #666;
}

/* 业绩数据 */
.performance-data {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin: 0 8rpx;
}

.data-item:first-child {
  margin-left: 0;
}

.data-item:last-child {
  margin-right: 0;
}

.data-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 8rpx;
}

.data-label {
  font-size: 24rpx;
  color: #666;
}

.data-change {
  font-size: 20rpx;
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}

.data-change.positive {
  color: #52c41a;
}

.data-change.negative {
  color: #ff4d4f;
}

.data-change.neutral {
  color: #999;
}

/* 团队排行 */
.ranking-list {
  display: flex;
  flex-direction: column;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  color: white;
}

.ranking-number.top1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb300 100%);
}

.ranking-number.top2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a0a0a0 100%);
}

.ranking-number.top3 {
  background: linear-gradient(135deg, #cd7f32 0%, #a0522d 100%);
}

.ranking-number.current {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.ranking-number.other {
  background: #f0f0f0;
  color: #666;
}

.ranking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ranking-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.ranking-department {
  font-size: 22rpx;
  color: #666;
}

.ranking-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
  text-align: right;
}

/* 业绩趋势图 */
.chart-container {
  height: 400rpx;
  background: white;
  border-radius: 12rpx;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-legend {
  display: flex;
  align-items: center;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-color.sales {
  background: #52c41a;
}

.legend-color.target {
  background: #faad14;
}

.legend-label {
  font-size: 22rpx;
  color: #666;
}

.chart-placeholder {
  width: 100%;
  height: 300rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

/* 分享按钮 */
.share-section {
  padding: 20rpx 30rpx;
}

.share-btn {
  width: 100%;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(82, 196, 26, 0.3);
}

.share-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
  filter: brightness(0) invert(1);
}

/* 业绩分析 */
.analysis-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
}

.analysis-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.analysis-items {
  display: flex;
  flex-direction: column;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.analysis-item:last-child {
  border-bottom: none;
}

.analysis-label {
  font-size: 28rpx;
  color: #333;
}

.analysis-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

.analysis-trend {
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}

.trend-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.trend-value {
  font-size: 22rpx;
}

.trend-value.positive {
  color: #52c41a;
}

.trend-value.negative {
  color: #ff4d4f;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .header-overview {
    padding: 30rpx 20rpx;
  }
  
  .overview-title {
    font-size: 32rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .performance-cards {
    padding: 0 20rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .performance-container {
    background-color: #1a1a1a;
  }
  
  .card {
    background: #2a2a2a;
    color: #ffffff;
  }
  
  .card-title {
    color: #ffffff;
  }
  
  .progress-bar {
    background: #333333;
  }
  
  .data-item {
    background: #333333;
  }
} 