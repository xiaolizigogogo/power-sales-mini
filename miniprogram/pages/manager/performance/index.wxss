.analysis-label {
  font-size: 28rpx;
  color: #333;
}

.analysis-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #52c41a;
}

.analysis-trend {
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}

.trend-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.trend-value {
  font-size: 22rpx;
}

.trend-value.positive {
  color: #52c41a;
}

.trend-value.negative {
  color: #ff4d4f;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .header-overview {
    padding: 30rpx 20rpx;
  }
  
  .overview-title {
    font-size: 32rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .performance-cards {
    padding: 0 20rpx;
  }
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  min-width: 150rpx;
  background: white;
  border-radius: 16rpx;
  padding: 25rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid #f0f0f0;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%);
  color: white;
  border: none;
}

.action-btn.primary .btn-icon {
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #333;
}

.btn-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}

.action-btn text {
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .performance-container {
    background-color: #1a1a1a;
  }
  
  .card {
    background: #2a2a2a;
    color: #ffffff;
  }
  
  .card-title {
    color: #ffffff;
  }
  
  .progress-bar {
    background: #333333;
  }
  
  .data-item {
    background: #333333;
  }
  
  .action-btn.secondary {
    background: #2a2a2a;
    color: #ffffff;
    border-color: #333333;
  }
} 