}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
}

.analysis-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.analysis-items {
  display: flex;
  flex-direction: column;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.analysis-item:last-child {
