/* 分享按钮 */
.share-section {
  padding: 20rpx 30rpx;
}

.share-btn {
  width: 100%;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(82, 196, 26, 0.3);
}

.share-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
  filter: brightness(0) invert(1);
