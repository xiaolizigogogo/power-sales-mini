}

.chart-legend {
  display: flex;
  align-items: center;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-color.sales {
  background: #52c41a;
}

.legend-color.target {
  background: #faad14;
}

.legend-label {
  font-size: 22rpx;
