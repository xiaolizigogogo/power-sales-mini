/* 客户经理工作台首页样式 */

.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #909399;
}

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #409eff 0%, #4facfe 100%);
  padding: 60rpx 30rpx 80rpx;
  color: white;
  position: relative;
}

.welcome-section::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  background: linear-gradient(135deg, #409eff 0%, #4facfe 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.welcome-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-text {
  flex: 1;
}

.greeting {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.time {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

.name {
  font-size: 28rpx;
  opacity: 0.9;
}

.date {
  font-size: 24rpx;
  opacity: 0.8;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
}

.avatar image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 今日数据 */
.today-section {
  margin: 40rpx 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background-color: #409eff;
  border-radius: 3rpx;
}

.today-grid {
  display: flex;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.today-item {
  flex: 1;
  padding: 40rpx 20rpx;
  text-align: center;
  position: relative;
  transition: all 0.2s ease;
}

.today-item:active {
  background-color: #f5f7fa;
}

.today-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  width: 2rpx;
  height: 60%;
  background-color: #ebeef5;
}

.today-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #303133;
  margin-bottom: 12rpx;
  line-height: 1;
}

.today-number.primary {
  color: #409eff;
}

.today-number.warning {
  color: #e6a23c;
}

.today-number.success {
  color: #67c23a;
}

.today-number.money {
  color: #f56c6c;
}

.today-label {
  font-size: 24rpx;
  color: #909399;
}

/* 快捷操作 */
.quick-section {
  margin: 30rpx;
}

.quick-grid {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.quick-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f7fa;
  transition: all 0.2s ease;
}

.quick-item:last-child {
  border-bottom: none;
}

.quick-item:active {
  background-color: #f5f7fa;
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.quick-icon-text {
  font-size: 36rpx;
}

.quick-content {
  flex: 1;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
}

.quick-subtitle {
  font-size: 24rpx;
  color: #909399;
}

.quick-arrow {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: #c0c4cc;
  font-weight: 300;
}

/* 本月业绩 */
.performance-section {
  margin: 30rpx;
}

.performance-card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
}

.performance-header {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.performance-item {
  text-align: center;
  flex: 1;
}

.performance-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 8rpx;
}

.performance-label {
  font-size: 24rpx;
  color: #909399;
}

.target-progress {
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.target-progress:active {
  background-color: #ecf5ff;
}

.target-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.target-title {
  font-size: 26rpx;
  color: #606266;
}

.target-percent {
  font-size: 28rpx;
  font-weight: 600;
  color: #409eff;
}

.progress-bar {
  height: 12rpx;
  background-color: #ebeef5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #409eff 0%, #67c23a 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 最近客户和紧急任务公共样式 */
.recent-section, .urgent-section {
  margin: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #409eff;
}

.section-more text:last-child {
  margin-left: var(--spacing-xs);
}

.recent-list, .urgent-list {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

/* 最近客户 */
.recent-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f7fa;
  transition: all 0.2s ease;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-item:active {
  background-color: #f5f7fa;
}

.customer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f2f5;
  flex-shrink: 0;
}

.customer-avatar image {
  width: 100%;
  height: 100%;
}

.customer-info {
  flex: 1;
  min-width: 0;
}

.customer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.customer-contact {
  font-size: 24rpx;
  color: #606266;
  margin-bottom: 4rpx;
}

.customer-time {
  font-size: 22rpx;
  color: #909399;
}

.customer-status {
  margin-right: 20rpx;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
}

.status-tag.status-following {
  background-color: #e6a23c;
}

.status-tag.status-negotiating {
  background-color: #409eff;
}

.status-tag.status-potential {
  background-color: #909399;
}

.customer-actions {
  flex-shrink: 0;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  background-color: #409eff;
  color: white;
}

/* 紧急任务 */
.urgent-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f7fa;
  transition: all 0.2s ease;
}

.urgent-item:last-child {
  border-bottom: none;
}

.urgent-item:active {
  background-color: #f5f7fa;
}

.task-priority {
  width: 8rpx;
  height: 60rpx;
  border-radius: 4rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.task-content {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-customer {
  font-size: 24rpx;
  color: #606266;
  margin-bottom: 4rpx;
}

.task-time {
  font-size: 22rpx;
  color: #909399;
}

.task-action {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.follow-btn {
  background-color: #409eff;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 22rpx;
}

.follow-btn:active {
  background-color: #337ecc;
}

/* 空状态 */
.empty-section {
  margin: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 80rpx 30rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 24rpx;
  color: #909399;
}

/* 调试区域 */
.debug-info {
  margin-top: 8rpx;
}

.debug-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.debug-section {
  margin-top: 20rpx;
  display: flex;
  gap: 20rpx;
}

.debug-btn {
  font-size: 24rpx !important;
  padding: 10rpx 20rpx !important;
  background-color: rgba(255, 255, 255, 0.2) !important;
  color: rgba(255, 255, 255, 0.9) !important;
  border-radius: 8rpx !important;
  border: 1rpx solid rgba(255, 255, 255, 0.3) !important;
}

.debug-btn.logout {
  background-color: rgba(245, 108, 108, 0.3) !important;
  border: 1rpx solid rgba(245, 108, 108, 0.5) !important;
  color: rgba(255, 255, 255, 1) !important;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: 60rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .today-item {
    padding: 30rpx 15rpx;
  }
  
  .today-number {
    font-size: 40rpx;
  }
  
  .quick-item, .recent-item, .urgent-item {
    padding: 24rpx;
  }
  
  .customer-avatar {
    width: 60rpx;
    height: 60rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .today-grid, .quick-grid, .performance-card, .recent-list, .urgent-list, .empty-section {
    background-color: #2a2a2a;
  }
  
  .section-title, .quick-title, .customer-name, .task-title {
    color: #fff;
  }
  
  .quick-subtitle, .customer-contact, .task-customer {
    color: #ccc;
  }
  
  .today-label, .performance-label, .customer-time, .task-time {
    color: #999;
  }
} 