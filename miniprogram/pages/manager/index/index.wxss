/* 客户经理工作台首页样式 */
@import "/styles/common.wxss";

.container {
  min-height: 100vh;
  background-color: var(--bg-color-light);
}

/* ==================== 欢迎区域 ==================== */
.welcome-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, #4facfe 100%);
  padding: var(--spacing-lg) var(--spacing-md) var(--spacing-xl);
  color: white;
}

.welcome-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-text {
  flex: 1;
}

.greeting {
  display: flex;
  align-items: baseline;
  margin-bottom: var(--spacing-xs);
}

.time {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: var(--spacing-xs);
}

.name {
  font-size: 28rpx;
  opacity: 0.9;
}

.date {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: var(--spacing-xs);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* ==================== 今日数据 ==================== */
.today-section {
  margin: var(--spacing-lg) var(--spacing-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-md);
  position: relative;
  padding-left: var(--spacing-sm);
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

.today-grid {
  display: flex;
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.today-item {
  flex: 1;
  padding: var(--spacing-lg) var(--spacing-md);
  text-align: center;
  position: relative;
  transition: all 0.2s ease;
}

.today-item:active {
  background-color: var(--bg-color-light);
}

.today-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  width: 2rpx;
  height: 60%;
  background-color: var(--border-color);
}

.today-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
  line-height: 1;
}

.today-number.primary {
  color: var(--primary-color);
}

.today-number.warning {
  color: var(--warning-color);
}

.today-number.success {
  color: var(--success-color);
}

.today-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

/* ==================== 快捷操作 ==================== */
.quick-section {
  margin: var(--spacing-lg) var(--spacing-md);
}

.quick-grid {
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.quick-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg) var(--spacing-md);
  border-bottom: 2rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.quick-item:last-child {
  border-bottom: none;
}

.quick-item:active {
  background-color: var(--bg-color-light);
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--border-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-md);
}

.quick-icon text {
  font-size: 36rpx;
}

.quick-content {
  flex: 1;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
}

.quick-subtitle {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.quick-arrow {
  color: var(--text-color-placeholder);
  font-size: 24rpx;
}

/* ==================== 本月业绩 ==================== */
.performance-section {
  margin: var(--spacing-lg) var(--spacing-md);
}

.performance-card {
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  padding: var(--spacing-lg);
}

.performance-header {
  display: flex;
  margin-bottom: var(--spacing-lg);
}

.performance-item {
  flex: 1;
  text-align: center;
}

.performance-number {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
}

.performance-label {
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.target-progress {
  border-top: 2rpx solid var(--border-color);
  padding-top: var(--spacing-lg);
}

.target-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.target-title {
  font-size: 28rpx;
  color: var(--text-color-primary);
}

.target-percent {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.progress-bar {
  height: 12rpx;
  background-color: var(--bg-color-light);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color) 0%, #4facfe 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* ==================== 最近客户 ==================== */
.recent-section, .urgent-section {
  margin: var(--spacing-lg) var(--spacing-md);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color-secondary);
}

.section-more text:last-child {
  margin-left: var(--spacing-xs);
}

.recent-list, .urgent-list {
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.recent-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 2rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-item:active {
  background-color: var(--bg-color-light);
}

.customer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--border-radius-md);
  overflow: hidden;
  margin-right: var(--spacing-md);
  background-color: var(--bg-color-light);
}

.customer-avatar image {
  width: 100%;
  height: 100%;
}

.customer-info {
  flex: 1;
}

.customer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
}

.customer-contact {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: var(--spacing-xs);
}

.customer-time {
  font-size: 22rpx;
  color: var(--text-color-placeholder);
}

.customer-status {
  margin-right: var(--spacing-md);
}

.status-tag {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--border-radius-sm);
  font-size: 22rpx;
  color: white;
}

.status-potential {
  background-color: var(--info-color);
}

.status-following {
  background-color: var(--warning-color);
}

.status-negotiating {
  background-color: var(--primary-color);
}

.status-deal {
  background-color: var(--success-color);
}

.status-lost {
  background-color: var(--error-color);
}

.customer-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* ==================== 紧急任务 ==================== */
.urgent-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 2rpx solid var(--border-color);
}

.urgent-item:last-child {
  border-bottom: none;
}

.task-priority {
  width: 8rpx;
  height: 80rpx;
  border-radius: 4rpx;
  margin-right: var(--spacing-md);
}

.task-content {
  flex: 1;
}

.task-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
}

.task-customer {
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: var(--spacing-xs);
}

.task-time {
  font-size: 22rpx;
  color: var(--warning-color);
}

.task-action {
  margin-left: var(--spacing-md);
}

.follow-btn {
  background-color: var(--primary-color) !important;
  color: white !important;
  border: none !important;
  font-size: 24rpx !important;
  padding: var(--spacing-sm) var(--spacing-md) !important;
  border-radius: var(--border-radius-md) !important;
}

/* ==================== 空状态 ==================== */
.empty-section {
  margin: var(--spacing-xl) var(--spacing-md);
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  padding: var(--spacing-xl);
  text-align: center;
}

/* ==================== 浮动操作按钮 ==================== */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: var(--spacing-md);
  z-index: 1000;
}

.fab-main {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.fab-main:active {
  transform: scale(0.95);
}

.fab-options {
  position: absolute;
  bottom: 120rpx;
  right: 0;
  background: white;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-medium);
  padding: var(--spacing-sm);
  min-width: 200rpx;
}

.fab-option {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  border-radius: var(--border-radius-md);
  transition: all 0.2s ease;
}

.fab-option:active {
  background-color: var(--bg-color-light);
}

.fab-option text:first-child {
  font-size: 24rpx;
  color: var(--primary-color);
  margin-right: var(--spacing-sm);
}

.fab-option text:last-child {
  font-size: 26rpx;
  color: var(--text-color-primary);
}

/* ==================== 下拉刷新提示 ==================== */
.refresh-tip {
  position: fixed;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: var(--success-color);
  color: white;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--border-radius-lg);
  font-size: 24rpx;
  display: flex;
  align-items: center;
  z-index: 1000;
  animation: slideDown 0.3s ease;
}

.refresh-tip text:first-child {
  margin-right: var(--spacing-xs);
}

@keyframes slideDown {
  0% {
    transform: translateX(-50%) translateY(-100%);
    opacity: 0;
  }
  100% {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }
}

/* ==================== 响应式适配 ==================== */
/* 小屏幕适配 */
@media (max-width: 375px) {
  .today-number {
    font-size: 40rpx;
  }
  
  .performance-number {
    font-size: 32rpx;
  }
  
  .quick-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .customer-avatar {
    width: 70rpx;
    height: 70rpx;
  }
}

/* 大屏幕适配 */
@media (min-width: 414px) {
  .today-number {
    font-size: 52rpx;
  }
  
  .performance-number {
    font-size: 40rpx;
  }
} 