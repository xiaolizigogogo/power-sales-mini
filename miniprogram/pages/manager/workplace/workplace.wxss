/* pages/manager/workplace/workplace.wxss */
.workplace-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部菜单栏留出更多空间，避免遮挡 */
}

/* 头部用户信息 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.date-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.today {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.weather {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 今日数据统计 */
.today-stats {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 快速操作 */
.quick-actions {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.action-name {
  font-size: 20rpx;
  color: #333;
  text-align: center;
}

/* 本周数据概览 */
.weekly-overview {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.overview-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 22rpx;
  color: #666;
}

/* 公共样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-more {
  font-size: 24rpx;
  color: #667eea;
}

/* 最近跟进记录 */
.recent-followups {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.followup-list {
  display: flex;
  flex-direction: column;
}

.followup-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.followup-item:last-child {
  border-bottom: none;
}

.followup-type {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.followup-type.phone {
  background: #e3f2fd;
}

.followup-type.visit {
  background: #f3e5f5;
}

.followup-type.wechat {
  background: #e8f5e8;
}

.type-icon {
  font-size: 28rpx;
}

.followup-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.followup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.customer-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.followup-time {
  font-size: 20rpx;
  color: #999;
}

.followup-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 即将到期提醒 */
.upcoming-reminders {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.reminder-list {
  display: flex;
  flex-direction: column;
}

.reminder-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.reminder-item:last-child {
  border-bottom: none;
}

.reminder-type {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.reminder-type.follow {
  background: #fff3e0;
}

.reminder-type.visit {
  background: #f3e5f5;
}

.reminder-type.demo {
  background: #e8f5e8;
}

.reminder-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.reminder-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.reminder-time {
  font-size: 20rpx;
  color: #ff6b6b;
  background: #fff5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.reminder-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 业绩进度 */
.performance-progress {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.progress-content {
  display: flex;
  flex-direction: column;
}

.progress-numbers {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.current-progress {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
  margin-right: 10rpx;
}

.target-progress {
  font-size: 24rpx;
  color: #999;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-percentage {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  background: white;
  padding: 40rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }
  
  .actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
} 