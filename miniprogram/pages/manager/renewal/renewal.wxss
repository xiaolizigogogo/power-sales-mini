/* 合同续约管理页面样式 */
.renewal-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 180rpx; /* 为底部菜单栏留出更多空间，避免遮挡 */
}

/* 统计卡片区域 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 筛选标签区域 */
.filter-section {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  justify-content: space-between;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.tab-text {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.filter-tab.active .tab-text {
  color: #fff;
}

.tab-count {
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 30rpx;
  text-align: center;
}

.filter-tab:not(.active) .tab-count {
  background: #f0f0f0;
  color: #666;
}

/* 搜索区域 */
.search-section {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

/* 续约列表区域 */
.renewal-list {
  padding: 0 30rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.sort-options {
  min-width: 200rpx;
}

/* 合同卡片 */
.contracts-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contract-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.contract-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 合同头部 */
.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.contract-info {
  flex: 1;
}

.customer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.contract-number {
  font-size: 24rpx;
  color: #666;
}

.contract-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: bold;
}

/* 合同详情 */
.contract-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.detail-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.detail-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.detail-value.expire-date {
  color: #ff976a;
  font-weight: bold;
}

.detail-value.amount {
  color: #52c41a;
  font-weight: bold;
}

.detail-value.urgent {
  color: #f56c6c;
  font-weight: bold;
}

/* 续约进度 */
.renewal-progress {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.progress-percent {
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-desc {
  font-size: 22rpx;
  color: #666;
}

/* 操作按钮 */
.contract-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 26rpx;
  font-weight: bold;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 1px solid #e9ecef;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-contracts {
  text-align: center;
  padding: 100rpx 0;
}

/* 弹窗样式 */
.renewal-dialog {
  padding: 20rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.dialog-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e9ecef;
}

/* 客户摘要 */
.customer-summary {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.summary-item {
  display: flex;
  margin-bottom: 10rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item .label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.summary-item .value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.summary-item .value.urgent {
  color: #f56c6c;
  font-weight: bold;
}

/* 提醒设置弹窗 */
.reminder-dialog {
  padding: 20rpx;
}

.reminder-options {
  margin-bottom: 30rpx;
}

.option-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.option-item:last-child {
  border-bottom: none;
}

/* 快速操作 */
.quick-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid #f0f0f0;
}

.action-row {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.quick-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.quick-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.quick-btn .van-icon {
  font-size: 40rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.quick-btn text {
  font-size: 22rpx;
  color: #666;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }
  
  .stat-card {
    padding: 20rpx 15rpx;
  }
  
  .stat-number {
    font-size: 40rpx;
  }
  
  .filter-tab {
    min-width: 100rpx;
    padding: 10rpx 5rpx;
  }
  
  .tab-text {
    font-size: 24rpx;
  }
  
  .contract-card {
    padding: 20rpx;
  }
  
  .customer-name {
    font-size: 28rpx;
  }
  
  .action-row {
    gap: 10rpx;
  }
  
  .quick-btn {
    padding: 10rpx 5rpx;
  }
} 