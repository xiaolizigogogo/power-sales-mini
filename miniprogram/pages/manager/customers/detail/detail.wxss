/* pages/manager/customers/detail/detail.wxss */

.customer-detail {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部信息卡片 */
.info-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.customer-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.avatar-section {
  position: relative;
  flex-shrink: 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.status-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.status-dot.potential { background: #909399; }
.status-dot.following { background: #E6A23C; }
.status-dot.negotiating { background: #409EFF; }
.status-dot.deal { background: #67C23A; }
.status-dot.lost { background: #F56C6C; }

.basic-info {
  flex: 1;
  min-width: 0;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.customer-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.customer-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.05);
}

.company-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.company-name {
  font-size: 28rpx;
  color: #666;
}

.customer-value {
  font-size: 28rpx;
  color: #f56c6c;
  font-weight: 600;
}

/* 联系信息 */
.contact-info {
  display: flex;
  gap: 30rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin: 20rpx 0;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #666;
}

.contact-item .iconfont {
  font-size: 32rpx;
  color: #409EFF;
}

.contact-text {
  font-size: 28rpx;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  color: #666;
  font-size: 24rpx;
}

.action-btn .iconfont {
  font-size: 40rpx;
  color: #409EFF;
}

/* 标签页内容 */
.tab-content {
  background: #fff;
  min-height: calc(100vh - 400rpx);
}

/* 基本信息标签页 */
.info-tab {
  padding: 20rpx 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx;
  border-top: 20rpx solid #f5f5f5;
}

.tags-container {
  padding: 0 30rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.empty-tags {
  color: #999;
  font-size: 28rpx;
}

.remark-container {
  padding: 0 30rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 跟进记录标签页 */
.follow-list {
  padding: 20rpx 30rpx;
}

.follow-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.follow-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.follow-type {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #409EFF;
  font-size: 26rpx;
}

.follow-time {
  font-size: 24rpx;
  color: #999;
}

.follow-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.follow-footer {
  font-size: 24rpx;
  color: #666;
}

.next-follow {
  margin-bottom: 10rpx;
}

/* 订单记录标签页 */
.order-list {
  padding: 20rpx 30rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.05);
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-amount {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.amount-label {
  font-size: 24rpx;
  color: #999;
}

.amount-value {
  font-size: 32rpx;
  color: #f56c6c;
  font-weight: 600;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 合同记录标签页 */
.contract-list {
  padding: 20rpx 30rpx;
}

.contract-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.contract-no {
  font-size: 26rpx;
  color: #666;
}

.contract-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.05);
}

.contract-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.contract-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.contract-amount {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.contract-date {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 弹窗样式 */
.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  padding: 10rpx;
}

.dialog-close .iconfont {
  font-size: 36rpx;
  color: #999;
}

.dialog-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.dialog-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

/* 响应式适配 */
@media screen and (max-width: 320px) {
  .customer-name {
    font-size: 32rpx;
  }
  
  .contact-text {
    font-size: 24rpx;
  }
  
  .action-btn {
    font-size: 22rpx;
  }
  
  .action-btn .iconfont {
    font-size: 36rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .customer-detail {
    background: #1a1a1a;
  }
  
  .info-card,
  .tab-content,
  .follow-item,
  .order-item,
  .contract-item {
    background: #2d2d2d;
  }
  
  .customer-name {
    color: #fff;
  }
  
  .company-name,
  .contact-item,
  .action-btn {
    color: #ccc;
  }
  
  .section-title {
    color: #fff;
    border-top-color: #1a1a1a;
  }
  
  .follow-content {
    color: #fff;
  }
  
  .contract-name {
    color: #fff;
  }
  
  .dialog-header {
    border-bottom-color: #3d3d3d;
  }
  
  .dialog-footer {
    border-top-color: #3d3d3d;
  }
} 