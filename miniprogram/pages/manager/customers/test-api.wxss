.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.retest-btn {
  background-color: #409EFF;
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.retest-btn[disabled] {
  background-color: #c0c4cc;
}

.actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #67C23A;
  color: white;
  border: none;
  padding: 15rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.results {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 4rpx solid #409EFF;
}

.result-item.error {
  border-left-color: #F56C6C;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 40rpx;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  word-break: break-all;
}

.error {
  color: #F56C6C;
}

.loading {
  text-align: center;
  padding: 40rpx;
  font-size: 32rpx;
  color: #666;
} 