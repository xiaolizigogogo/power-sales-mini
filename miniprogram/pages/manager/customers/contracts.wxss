/* pages/manager/customers/contracts.wxss */

.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.header-title {
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
}

.title-count {
  font-size: 28rpx;
  margin-left: 10rpx;
  opacity: 0.8;
}

.header-actions {
  display: flex;
  align-items: center;
}

.btn-add {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  color: white;
  font-size: 28rpx;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

/* 搜索和筛选 */
.search-section {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.search-actions {
  display: flex;
  align-items: center;
}

.search-btn, .clear-btn {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-left: 10rpx;
}

.search-btn {
  background: #667eea;
  color: white;
}

.clear-btn {
  background: #f0f0f0;
  color: #666;
}

.filter-section {
  display: flex;
  align-items: center;
}

.filter-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  padding: 15rpx 20rpx;
  border-radius: 30rpx;
  flex: 1;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.filter-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.filter-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 合同列表 */
.contract-list {
  padding: 20rpx 30rpx;
}

.contract-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.contract-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.contract-info {
  flex: 1;
}

.contract-no {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.contract-status {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-signed {
  background: #d1ecf1;
  color: #0c5460;
}

.status-completed {
  background: #d4edda;
  color: #155724;
}

.status-expired {
  background: #f8d7da;
  color: #721c24;
}

.status-cancelled {
  background: #e2e3e5;
  color: #383d41;
}

.status-unknown {
  background: #f8f9fa;
  color: #6c757d;
}

.contract-amount {
  text-align: right;
}

.amount-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.amount-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #e74c3c;
}

.contract-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 12rpx;
}

.detail-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.detail-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.contract-footer {
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.time-info {
  display: flex;
  margin-bottom: 8rpx;
}

.time-label {
  width: 160rpx;
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.time-value {
  flex: 1;
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #bbb;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-more-text {
  font-size: 28rpx;
  color: #667eea;
  padding: 15rpx 30rpx;
  border: 1px solid #667eea;
  border-radius: 30rpx;
  background: white;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
} 