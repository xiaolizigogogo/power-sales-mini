.order-detail {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

.page-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 状态卡片 */
.status-card {
  margin: 20rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  text-align: center;
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 28rpx;
  color: #999;
}

/* 信息卡片 */
.info-card {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

/* 产品信息 */
.product-info {
  display: flex;
  align-items: center;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-detail {
  flex: 1;
}

.product-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.product-price .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #f44;
}

.product-price .unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #666;
}

.info-item .value {
  color: #333;
}

.info-item .value.highlight {
  color: #f44;
  font-weight: bold;
}

/* 商务洽谈记录 */
.negotiation-list {
  margin-top: 20rpx;
}

.negotiation-item {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.negotiation-item:last-child {
  margin-bottom: 0;
}

.negotiation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.negotiator {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.negotiation-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.file-list {
  margin-top: 16rpx;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.file-item .van-icon {
  font-size: 32rpx;
  color: #1989fa;
  margin-right: 12rpx;
}

.file-name {
  font-size: 26rpx;
  color: #1989fa;
}

/* 服务状态 */
.service-status {
  margin-top: 20rpx;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.service-item:last-child {
  border-bottom: none;
}

.service-item .label {
  color: #666666;
}

.service-item .value {
  color: #333333;
  font-weight: 500;
}

.service-item .value.status-active {
  color: #52c41a;
}

.service-item .value.highlight {
  color: #1989fa;
  font-weight: 600;
}

/* 服务进度 */
.service-progress {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.progress-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.progress-bar {
  height: 8rpx;
  background: #e5e5e5;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1989fa, #52c41a);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
  text-align: right;
}

/* 联系信息 */
.contact-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.contact-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
}

.contact-btn .van-icon {
  font-size: 32rpx;
  color: #1989fa;
  margin-right: 8rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

/* 商务洽谈弹窗 */
.negotiation-popup {
  padding: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.popup-content {
  margin-bottom: 30rpx;
}

.upload-section {
  margin-top: 30rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.popup-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}

/* 自定义van-button样式 */
.van-button {
  min-width: 180rpx !important;
}

