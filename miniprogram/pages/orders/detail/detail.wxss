/* 订单详情页面样式 */
.order-detail {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.page-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.order-no {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 5rpx;
}

.create-time {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 信息卡片 */
.info-card {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f7f8fa;
}

/* 产品信息 */
.product-info {
  display: flex;
  align-items: flex-start;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background-color: #f7f8fa;
  flex-shrink: 0;
}

.product-detail {
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.product-description {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.product-price .price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ee0a24;
}

.product-price .unit {
  font-size: 24rpx;
  color: #969799;
  margin-left: 5rpx;
}

/* 订单信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f7f8fa;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: #646566;
  flex-shrink: 0;
}

.info-item .value {
  font-size: 28rpx;
  color: #323233;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
}

.info-item .value.highlight {
  color: #ee0a24;
  font-weight: bold;
  font-size: 30rpx;
}

/* 服务状态 */
.service-status {
  margin-top: 20rpx;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f7f8fa;
}

.service-item:last-child {
  border-bottom: none;
}

.service-item .label {
  font-size: 26rpx;
  color: #646566;
}

.service-item .value {
  font-size: 26rpx;
  color: #323233;
}

.service-item .value.status-active {
  color: #07c160;
  font-weight: bold;
}

.service-item .value.highlight {
  color: #ee0a24;
  font-weight: bold;
}

/* 服务进度 */
.service-progress {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
}

.progress-title {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 8rpx;
  background: #ebedf0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #646566;
  text-align: center;
}

/* 商务洽谈记录 */
.negotiation-list {
  margin-top: 20rpx;
}

.negotiation-item {
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.negotiation-item:last-child {
  margin-bottom: 0;
}

.negotiation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.negotiator {
  font-size: 26rpx;
  color: #323233;
  font-weight: bold;
}

.time {
  font-size: 22rpx;
  color: #969799;
}

.negotiation-content {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.file-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 10rpx 15rpx;
  background: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #1989fa;
}

.file-item .file-name {
  margin-left: 8rpx;
}

/* 联系信息 */
.contact-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contact-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 25rpx;
  background: #1989fa;
  color: white;
  border-radius: 25rpx;
  font-size: 26rpx;
}

.contact-btn text {
  margin-left: 8rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.bottom-bar .van-button {
  flex: 1;
  border-radius: 25rpx !important;
  font-size: 28rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
}

/* 商务洽谈弹窗 */
.negotiation-popup {
  padding: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  text-align: center;
  margin-bottom: 30rpx;
}

.popup-content {
  margin-bottom: 30rpx;
}

.upload-section {
  margin-top: 30rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 20rpx;
}

.popup-footer {
  display: flex;
  gap: 20rpx;
}

.popup-footer .van-button {
  flex: 1;
  border-radius: 25rpx !important;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .status-card {
    margin: 15rpx;
    padding: 30rpx 20rpx;
  }
  
  .info-card {
    margin: 15rpx;
    padding: 25rpx;
  }
  
  .product-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .bottom-bar {
    padding: 15rpx 20rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .order-detail {
    background-color: #1a1a1a;
  }
  
  .info-card {
    background: #2a2a2a;
  }
  
  .card-title {
    color: #ffffff;
  }
  
  .info-item .value {
    color: #ffffff;
  }
  
  .bottom-bar {
    background: #2a2a2a;
  }
} 