}

.payment-method:active {
  background-color: #f0f0f0;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.method-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.payment-method.selected .check-icon {
  opacity: 1;
}

@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .info-card, .progress-section, .action-bar {
    background-color: #2a2a2a;
  }
  
  .card-title, .product-name, .manager-name {
    color: #fff;
  }
  
  .info-label, .info-value, .product-desc, .manager-title {
    color: #ccc;
  }
  
  .spec-item, .payment-method {
    background-color: #333;
  }
  
  .action-btn.secondary {
    background-color: #333;
    color: #fff;
  }
  
  .info-item {
    border-color: #333;
  }
}

