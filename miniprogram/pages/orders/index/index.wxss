/* pages/orders/index/index.wxss */

/* CSS 变量在小程序中可能不支持，直接使用具体颜色值 */

/* 全局样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  background: #fff;
  padding: 40rpx 30rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

/* 搜索区域 */
.search-section {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.15);
  border: 2rpx solid #1890ff;
}

.search-icon {
  margin-right: 16rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}

.search-input::placeholder {
  color: #999;
}

.search-clear {
  position: absolute;
  right: 30rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.search-clear.show {
  opacity: 0.6;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1890ff;
  color: #fff;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
  font-size: 28rpx;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.filter-btn:active {
  transform: scale(0.95);
  background: #0c7cd5;
}

/* 标签栏 */
.tabs-section {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.tabs-container {
  white-space: nowrap;
}

.tabs-list {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  flex-shrink: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 40rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  border-radius: 15rpx;
  margin: 10rpx 5rpx;
  transform: scale(1.05);
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: 600;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  transition: color 0.3s ease;
}

.tab-badge {
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  border-radius: 50rpx;
  padding: 2rpx 8rpx;
  margin-left: 8rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-item.active .tab-badge {
  background: rgba(255, 255, 255, 0.9);
  color: #1890ff;
}

/* 订单容器 */
.orders-container {
  padding: 0 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.empty-action-btn {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.empty-action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.2);
}

/* 产品图片占位符 */
.product-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  font-size: 60rpx;
  color: #ccc;
}

/* 头像占位符 */
.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e6f7ff;
  font-size: 36rpx;
  color: #1890ff;
}

/* 订单列表 */
.orders-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 订单卡片 */
.order-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.order-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.12);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #fafafa, #f5f5f5);
  border-bottom: 1rpx solid #eee;
}

.order-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.order-date {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.order-status.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.order-status.confirmed {
  background: #f6ffed;
  color: #52c41a;
}

.order-status.cancelled {
  background: #fff2f0;
  color: #ff4d4f;
}

.order-status.completed {
  background: #e6f7ff;
  color: #1890ff;
}

.status-text {
  font-size: 24rpx;
}

/* 产品信息 */
.product-section {
  display: flex;
  align-items: center;
  padding: 30rpx;
  gap: 20rpx;
}

.product-image-wrapper {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-specs {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-details {
  display: flex;
  gap: 20rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #999;
  background: #f8f9fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  flex-direction: column;
  align-items: flex-end;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.price-amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff4d4f;
}

.price-unit {
  font-size: 22rpx;
  color: #999;
}

/* 服务信息 */
.service-section {
  padding: 0 30rpx 20rpx;
}

.service-info {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  gap: 20rpx;
}

.service-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #e6f7ff;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.service-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.service-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.service-title {
  font-size: 24rpx;
  color: #666;
}

.service-contact {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #e6f7ff;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.service-contact:active {
  background: #bae7ff;
}

.contact-text {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 600;
}

/* 进度条 */
.progress-section {
  padding: 0 30rpx 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.progress-percent {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 600;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #40a9ff);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
}

.step-item {
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: #999;
  padding: 8rpx 4rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.step-item.completed {
  background: #e6f7ff;
  color: #1890ff;
  font-weight: 600;
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(24, 144, 255, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 12rpx rgba(24, 144, 255, 0.2);
}

.action-btn.secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #d9d9d9;
}

.action-btn.secondary:active {
  background: #f5f5f5;
  border-color: #bfbfbf;
}

/* 加载更多 */
.load-more-section {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-indicator,
.no-more-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.load-more-text,
.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 筛选弹窗 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-popup.show {
  opacity: 1;
  visibility: visible;
}

.filter-content {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  width: 100%;
  max-height: 80vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-popup.show .filter-content {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-close {
  padding: 8rpx;
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.filter-close:active {
  background: #f0f0f0;
}

.filter-body {
  padding: 30rpx;
}

.filter-group {
  margin-bottom: 40rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 16rpx 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #fff;
  transition: all 0.3s ease;
}

.filter-option.selected {
  background: #1890ff;
  color: #fff;
  border-color: #1890ff;
}

.filter-option:active {
  transform: scale(0.95);
}

.filter-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.filter-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.filter-btn.reset {
  background: #fff;
  color: #666;
  border: 2rpx solid #d9d9d9;
}

.filter-btn.reset:active {
  background: #f5f5f5;
}

.filter-btn.confirm {
  background: linear-gradient(135deg, #1890ff, #40a9ff);
  color: #fff;
}

.filter-btn.confirm:active {
  transform: translateY(2rpx);
}

/* 操作菜单 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.action-sheet.show {
  opacity: 1;
  visibility: visible;
}

.action-sheet-content {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  width: 100%;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.action-sheet.show .action-sheet-content {
  transform: translateY(0);
}

.action-sheet-header {
  text-align: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-sheet-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.action-sheet-body {
  padding: 20rpx 0;
}

.action-sheet-item {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s ease;
}

.action-sheet-item:active {
  background: #f8f9fa;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.action-sheet-footer {
  padding: 20rpx 30rpx 40rpx;
}

.action-sheet-cancel {
  width: 100%;
  padding: 24rpx;
  background: #fff;
  color: #666;
  border: 2rpx solid #d9d9d9;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-sheet-cancel:active {
  background: #f5f5f5;
}

/* 防止事件穿透 */
.stopPropagation {
  /* 用于阻止事件冒泡 */
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding-bottom: 160rpx; /* 小屏幕设备增加更多底部间距 */
  }
  
  .order-item {
    padding: 24rpx;
  }
  
  .product-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .action-btn {
    min-width: 120rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .search-bar, .tab-bar, .order-item {
    background-color: #2a2a2a;
    border-color: #404040;
  }
  
  .search-input-wrapper, .action-btn.secondary {
    background-color: #404040;
  }
  
  .tab-name, .order-number, .product-name {
    color: #fff;
  }
  
  .order-date, .product-desc, .service-text {
    color: #ccc;
  }
} 