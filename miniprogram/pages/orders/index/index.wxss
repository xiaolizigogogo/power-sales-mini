/* pages/orders/index/index.wxss */

/* CSS 变量在小程序中可能不支持，直接使用具体颜色值 */

.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 20rpx;
}

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

.search-clear {
  position: absolute;
  right: 30rpx;
  width: 32rpx;
  height: 32rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.search-clear.show {
  opacity: 0.6;
}

.search-clear text {
  font-size: 24rpx;
  color: #999;
}

.filter-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.filter-btn text {
  font-size: 32rpx;
}

/* 标签栏样式 */
.tab-bar {
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
}

.tab-list {
  display: flex;
  padding: 0 30rpx;
}

.tab-item {
  flex-shrink: 0;
  padding: 30rpx 40rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.tab-item.active .tab-name {
  color: #1890ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

.tab-name {
  font-size: 28rpx;
  color: #666;
  transition: color 0.3s;
}

.tab-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 订单列表容器 */
.order-list-container {
  padding: 20rpx 30rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.empty-btn {
  background-color: #1890ff;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  border: none;
}

/* 订单列表样式 */
.order-list {
  padding: 0 20rpx;
}

/* 订单卡片 */
.order-container {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 28rpx;
  color: #333;
}

.order-status {
  font-size: 26rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.order-status.processing {
  color: #409eff;
  background: rgba(64, 158, 255, 0.1);
}

.order-status.completed {
  color: #67c23a;
  background: rgba(103, 194, 58, 0.1);
}

.order-status.cancelled {
  color: #909399;
  background: rgba(144, 147, 153, 0.1);
}

/* 产品信息 */
.product-info {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-detail {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #999;
}

.price-value {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 订单信息 */
.order-info {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-item {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  color: #999;
  width: 160rpx;
}

.info-item .value {
  color: #333;
  flex: 1;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}

.customer-name {
  color: #666;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-all {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 自定义van-tabs样式 */
.van-tabs__line {
  background-color: #1989fa !important;
}

.van-tab--active {
  color: #1989fa !important;
  font-weight: bold !important;
}

/* 服务信息 */
.service-info {
  margin-bottom: 30rpx;
}

.service-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.service-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.service-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
}

.service-phone {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
  text-decoration: underline;
}

/* 进度条样式 */
.progress-bar {
  margin-bottom: 30rpx;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  position: relative;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.step-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ddd;
  margin-bottom: 12rpx;
  transition: background-color 0.3s;
}

.step-item.completed .step-dot {
  background-color: #1890ff;
}

.step-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  white-space: nowrap;
}

.step-item.completed .step-text {
  color: #1890ff;
}

.progress-line {
  height: 4rpx;
  background-color: #eee;
  border-radius: 2rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #1890ff;
  border-radius: 2rpx;
  transition: width 0.3s ease;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  gap: 20rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  background: #f5f7fa;
  color: #666;
  border: none;
}

.action-btn::after {
  display: none;
}

.action-btn.primary {
  background: #409eff;
  color: #fff;
}

.action-btn:active {
  opacity: 0.7;
}

/* 加载更多 */
.load-more, .no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 筛选弹窗样式 */
.filter-popup {
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-reset {
  font-size: 28rpx;
  color: #1890ff;
}

.filter-content {
  padding: 0 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-section {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-section:last-child {
  border-bottom: none;
}

.filter-section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filter-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}

.filter-option text {
  font-size: 28rpx;
  color: #666;
}

.filter-option.checked text {
  color: #1890ff;
}

.check-icon {
  font-size: 32rpx;
  color: #1890ff;
  opacity: 0;
  transition: opacity 0.3s;
}

.filter-option.checked .check-icon {
  opacity: 1;
}

.filter-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
}

.filter-cancel, .filter-confirm {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
}

.filter-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.filter-confirm {
  background-color: #1890ff;
  color: #fff;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .order-item {
    padding: 24rpx;
  }
  
  .product-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .action-btn {
    min-width: 120rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .search-bar, .tab-bar, .order-item {
    background-color: #2a2a2a;
    border-color: #404040;
  }
  
  .search-input-wrapper, .action-btn.secondary {
    background-color: #404040;
  }
  
  .tab-name, .order-number, .product-name {
    color: #fff;
  }
  
  .order-date, .product-desc, .service-text {
    color: #ccc;
  }
} 