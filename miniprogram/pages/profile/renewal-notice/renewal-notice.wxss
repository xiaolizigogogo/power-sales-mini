/* 客户端续约提醒页面样式 */
.renewal-notice-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 头部提醒卡片 */
.notice-header {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.header-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.header-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.header-content {
  flex: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 筛选标签区域 */
.filter-section {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  justify-content: space-between;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 10rpx;
  border-radius: 15rpx;
  transition: all 0.3s ease;
  min-width: 100rpx;
}

.filter-tab.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  color: #fff;
}

.tab-text {
  font-size: 26rpx;
  margin-bottom: 5rpx;
}

.filter-tab.active .tab-text {
  color: #fff;
}

.tab-count {
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 30rpx;
  text-align: center;
}

.filter-tab:not(.active) .tab-count {
  background: #f0f0f0;
  color: #666;
}

/* 合同列表 */
.contracts-list {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contract-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s ease;
}

.contract-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 紧急标识 */
.urgent-badge {
  position: absolute;
  top: -5rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #f56c6c 0%, #ff9a9e 100%);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  z-index: 1;
}

/* 合同信息 */
.contract-info {
  margin-bottom: 20rpx;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.days-left {
  font-size: 24rpx;
  color: #ff976a;
  font-weight: bold;
  background: rgba(255, 151, 106, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.days-left.urgent {
  color: #f56c6c;
  background: rgba(245, 108, 108, 0.1);
}

/* 详情信息 */
.info-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.detail-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.detail-item .label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.detail-item .value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.detail-item .value.amount {
  color: #52c41a;
  font-weight: bold;
}

.detail-item .value.expire-date {
  color: #ff976a;
  font-weight: bold;
}

/* 服务效果评价 */
.service-evaluation {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.eval-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.eval-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.eval-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.eval-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.eval-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.eval-value.savings {
  color: #52c41a;
}

.eval-stars {
  display: flex;
  align-items: center;
}

/* 续约状态 */
.renewal-status {
  background: #f0f8ff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.status-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.status-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.status-value {
  font-size: 24rpx;
  font-weight: bold;
}

.status-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作按钮 */
.contract-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 26rpx;
  font-weight: bold;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
  color: #fff;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 1px solid #e9ecef;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 空状态 */
.empty-contracts {
  text-align: center;
  padding: 100rpx 0;
}

/* 弹窗样式 */
.decision-dialog {
  padding: 20rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.dialog-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e9ecef;
}

/* 合同摘要 */
.contract-summary {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.summary-item {
  display: flex;
  margin-bottom: 10rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item .label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.summary-item .value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.summary-item .value.savings {
  color: #52c41a;
  font-weight: bold;
}

/* 决策选项 */
.decision-options {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

.decision-options .van-radio {
  margin-bottom: 20rpx;
}

.decision-options .van-radio:last-child {
  margin-bottom: 0;
}

/* 续约期限 */
.renewal-period,
.negotiation-requirements,
.decline-reasons {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .header-card {
    padding: 20rpx;
  }
  
  .header-title {
    font-size: 30rpx;
  }
  
  .header-desc {
    font-size: 24rpx;
  }
  
  .filter-tab {
    min-width: 80rpx;
    padding: 10rpx 5rpx;
  }
  
  .tab-text {
    font-size: 22rpx;
  }
  
  .contract-item {
    padding: 20rpx;
  }
  
  .contract-number {
    font-size: 28rpx;
  }
  
  .days-left {
    font-size: 20rpx;
  }
} 