.contract-detail {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 状态栏 */
.status-bar {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 信息区域 */
.info-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  color: #666;
}

.info-item .value {
  color: #333;
}

.info-item .value.highlight {
  color: #f44;
  font-weight: bold;
}

/* 签署信息 */
.sign-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.sign-info {
  margin-bottom: 30rpx;
}

.sign-info:last-child {
  margin-bottom: 0;
}

.sign-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.sign-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.sign-time {
  font-size: 26rpx;
  color: #999;
}

.sign-content {
  display: flex;
  gap: 20rpx;
}

.signature-image,
.seal-image {
  width: 200rpx;
  height: 120rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  margin-top: 20rpx;
}

/* 签署弹窗 */
.sign-dialog {
  padding: 30rpx;
}

.area-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.signature-area {
  margin-bottom: 30rpx;
}

.seal-upload {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.seal-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

/* 加载状态 */
.loading {
  padding: 60rpx 0;
  text-align: center;
} 