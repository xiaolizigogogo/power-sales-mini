/* 合同详情页面样式 */
.contract-detail {
  padding: 0 0 100rpx 0;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 状态栏 */
.status-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 30rpx 40rpx;
  color: white;
  text-align: center;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 信息区块 */
.info-section {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f2f3f5;
}

.section-title van-icon {
  margin-right: 12rpx;
  color: #1989fa;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item .label {
  font-size: 26rpx;
  color: #969799;
}

.info-item .value {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

.info-item .value.highlight {
  color: #ee0a24;
  font-size: 32rpx;
  font-weight: bold;
}

/* 客户信息 */
.customer-info .info-item {
  grid-column: span 2;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f2f3f5;
}

.customer-info .info-item:last-child {
  border-bottom: none;
}

/* 签署进度 */
.sign-progress {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.progress-steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  opacity: 0.5;
}

.step.active,
.step.completed {
  opacity: 1;
}

.step-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f2f3f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.step.active .step-icon {
  background: #1989fa;
  color: white;
}

.step.completed .step-icon {
  background: #07c160;
  color: white;
}

.step-content {
  text-align: center;
}

.step-title {
  font-size: 26rpx;
  color: #323233;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.step-desc {
  font-size: 22rpx;
  color: #969799;
  display: block;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background: #f2f3f5;
  margin: 0 20rpx;
  margin-top: -30rpx;
}

.step-line.completed {
  background: #07c160;
}

/* 签署记录 */
.sign-section {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.sign-record {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
}

.sign-record:last-child {
  margin-bottom: 0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.record-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
}

.record-title van-icon {
  margin-right: 8rpx;
  color: #1989fa;
}

.record-time {
  font-size: 24rpx;
  color: #969799;
}

.record-content {
  display: flex;
  gap: 30rpx;
}

.signature-display,
.seal-display {
  flex: 1;
}

.display-title {
  font-size: 24rpx;
  color: #646566;
  display: block;
  margin-bottom: 12rpx;
}

.signature-image,
.seal-image {
  width: 120rpx;
  height: 60rpx;
  border: 2rpx solid #ebedf0;
  border-radius: 8rpx;
  background: white;
}

/* 合同条款预览 */
.terms-section {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.terms-preview {
  margin-top: 20rpx;
}

.terms-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #1989fa;
}

.terms-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  display: block;
  margin-bottom: 8rpx;
}

.terms-content {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.6;
  display: block;
}

.view-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #1989fa;
  font-size: 28rpx;
  border: 2rpx solid #1989fa;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.view-more van-icon {
  margin-left: 8rpx;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
}

.action-btn.secondary {
  background: #f2f3f5 !important;
  color: #646566 !important;
  border: none !important;
}

.action-btn.primary {
  background: #07c160 !important;
  border-color: #07c160 !important;
}

.action-btn.completed {
  background: #07c160 !important;
  border-color: #07c160 !important;
  opacity: 0.8;
}

/* 签署弹窗 */
.sign-dialog {
  padding: 20rpx;
}

.sign-notice {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff7cc;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.sign-notice van-icon {
  margin-right: 12rpx;
  color: #ed6a0c;
}

.sign-notice text {
  font-size: 26rpx;
  color: #ed6a0c;
  line-height: 1.5;
}

/* 签名区域 */
.signature-area {
  margin-bottom: 30rpx;
}

.area-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 15rpx;
}

.area-title van-icon {
  margin-right: 8rpx;
  color: #1989fa;
}

.required {
  color: #ee0a24;
  margin-left: 4rpx;
}

.optional {
  color: #969799;
  margin-left: 4rpx;
  font-weight: normal;
}

.signature-container {
  border: 2rpx solid #ebedf0;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 印章上传区域 */
.seal-area {
  margin-bottom: 30rpx;
}

.seal-upload {
  border: 2rpx dashed #c8c9cc;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
  background: #fafafa;
  position: relative;
}

.seal-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.seal-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 15rpx;
}

.change-btn,
.remove-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: #1989fa;
  border: 1rpx solid #1989fa;
}

.remove-btn {
  color: #ee0a24;
  border-color: #ee0a24;
}

.upload-text {
  font-size: 28rpx;
  color: #646566;
  display: block;
  margin-top: 15rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #969799;
  display: block;
  margin-top: 8rpx;
}

/* 条款确认 */
.terms-confirm {
  padding: 20rpx 0;
  border-top: 1rpx solid #ebedf0;
}

/* 企业签署弹窗 */
.company-sign-dialog {
  padding: 20rpx;
}

.customer-sign-confirm {
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.confirm-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 15rpx;
}

.confirm-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.confirm-item .label {
  font-size: 26rpx;
  color: #646566;
}

.confirm-item .value {
  font-size: 26rpx;
  color: #323233;
}

.signature-check {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.signature-mini {
  width: 80rpx;
  height: 40rpx;
  border: 1rpx solid #ebedf0;
  border-radius: 4rpx;
}

.company-signature-area,
.company-seal-area {
  margin-bottom: 30rpx;
}

.company-seal-upload {
  border: 2rpx dashed #c8c9cc;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
  background: #fafafa;
}

.auth-confirm {
  padding: 20rpx 0;
  border-top: 1rpx solid #ebedf0;
}

/* 加载和错误状态 */
.loading-container,
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 40rpx;
}

.loading-container {
  flex-direction: column;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .info-grid {
    grid-template-columns: 1fr;
  }
  
  .progress-steps {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .step-line {
    display: none;
  }
  
  .record-content {
    flex-direction: column;
  }
} 