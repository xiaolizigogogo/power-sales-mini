/* pages/profile/contracts/contracts.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 120rpx;
}

/* 统计卡片区域 */
.statistics-section {
  padding: 30rpx;
  background: linear-gradient(135deg, #409eff 0%, #4facfe 100%);
}

.stat-grid {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  flex: 1;
  padding: 30rpx 20rpx;
  text-align: center;
  color: white;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  width: 2rpx;
  height: 60%;
  background-color: rgba(255, 255, 255, 0.2);
}

.stat-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 搜索区域 */
.search-section {
  padding: 30rpx;
  background: white;
  border-bottom: 2rpx solid #f0f2f5;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 25rpx;
  padding: 0 24rpx;
  height: 70rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  color: #909399;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
  height: 100%;
}

.clear-btn {
  padding: 8rpx;
  font-size: 20rpx;
  color: #c0c4cc;
}

.filter-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #ecf5ff;
  color: #409eff;
  border-radius: 25rpx;
  font-size: 26rpx;
  gap: 8rpx;
}

.filter-icon {
  font-size: 20rpx;
}

/* 状态标签栏 */
.status-tabs {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f2f5;
  overflow-x: auto;
  white-space: nowrap;
}

.status-tab {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  margin-right: 20rpx;
  border-radius: 25rpx;
  background-color: #f5f7fa;
  color: #606266;
  font-size: 24rpx;
  position: relative;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.status-tab.active {
  background-color: #409eff;
  color: white;
}

.tab-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.tab-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: #f56c6c;
  color: white;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
  line-height: 1;
}

/* 刷新指示器 */
.refresh-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: white;
  color: #909399;
  font-size: 24rpx;
  gap: 12rpx;
}

.loading-icon {
  font-size: 28rpx;
}

/* 合同列表 */
.contract-list {
  min-height: 100vh;
  background-color: #f7f8fa;
}

/* 合同卡片 */
.contract-container {
  padding: 20rpx;
}

.contract-card {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

/* 合同头部 */
.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-no {
  font-size: 28rpx;
  color: #666;
}

.contract-status {
  font-size: 28rpx;
  font-weight: 500;
}

/* 订单信息 */
.order-info {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  color: #666;
}

.info-item .value {
  color: #333;
}

.info-item .value.highlight {
  color: #f44;
  font-weight: bold;
}

/* 签署信息 */
.sign-info {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.sign-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.sign-item:last-child {
  margin-bottom: 0;
}

.sign-item .label {
  color: #666;
}

.sign-item .value {
  color: #333;
}

/* 合同底部 */
.contract-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}

.customer-name {
  color: #666;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-all {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 自定义van-tabs样式 */
.van-tabs__line {
  background-color: #1989fa !important;
}

.van-tab--active {
  color: #1989fa !important;
  font-weight: bold !important;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f2f5;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.close-btn {
  padding: 8rpx;
  font-size: 24rpx;
  color: #c0c4cc;
}

.filter-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 20rpx;
}

.status-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-option {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  gap: 16rpx;
}

.status-option.selected {
  background-color: #ecf5ff;
  border: 2rpx solid #409eff;
}

.option-icon {
  font-size: 24rpx;
}

.option-text {
  flex: 1;
  font-size: 26rpx;
  color: #303133;
}

.check-icon {
  font-size: 20rpx;
}

.date-range {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-picker {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  gap: 12rpx;
}

.date-icon {
  font-size: 24rpx;
  color: #909399;
}

.date-text {
  flex: 1;
  font-size: 26rpx;
  color: #303133;
}

.date-separator {
  font-size: 24rpx;
  color: #909399;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f2f5;
}

.filter-reset-btn {
  flex: 1;
  background-color: #f5f7fa;
  color: #606266;
  border: none;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.filter-apply-btn {
  flex: 2;
  background-color: #409eff;
  color: white;
  border: none;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 预览弹窗 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.preview-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.preview-content {
  position: absolute;
  top: 10%;
  left: 5%;
  right: 5%;
  bottom: 10%;
  background: white;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f2f5;
  flex-shrink: 0;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.preview-body {
  flex: 1;
  padding: 30rpx;
}

.contract-preview {
  line-height: 1.6;
}

.preview-info {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f2f5;
}

.preview-contract-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 16rpx;
}

.preview-contract-number {
  font-size: 24rpx;
  color: #909399;
}

.preview-parties {
  margin-bottom: 40rpx;
}

.party {
  margin-bottom: 30rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.party-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 12rpx;
}

.party-name {
  display: block;
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 8rpx;
}

.party-address {
  font-size: 24rpx;
  color: #909399;
}

.preview-terms {
  margin-bottom: 40rpx;
}

.terms-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 20rpx;
}

.term-item {
  display: flex;
  margin-bottom: 16rpx;
  padding: 16rpx 0;
}

.term-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #606266;
  flex-shrink: 0;
}

.term-value {
  flex: 1;
  font-size: 26rpx;
  color: #303133;
  line-height: 1.4;
}

.term-value.amount {
  color: #f56c6c;
  font-weight: 600;
}

.preview-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f2f5;
  flex-shrink: 0;
}

.preview-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
}

.preview-btn.secondary {
  background-color: #f5f7fa;
  color: #606266;
}

.preview-btn.primary {
  background-color: #409eff;
  color: white;
}

/* 底部快捷操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f2f5;
  display: flex;
  gap: 20rpx;
  z-index: 100;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.bottom-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  gap: 8rpx;
}

.bottom-btn.primary {
  background-color: #409eff;
  color: white;
}

.bottom-btn.secondary {
  background-color: #f5f7fa;
  color: #606266;
  border: 2rpx solid #dcdfe6;
}

.btn-icon {
  font-size: 24rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .contract-actions {
    flex-direction: column;
  }
  
  .action-btn {
    width: 100%;
    justify-content: center;
  }
  
  .date-range {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .date-separator {
    display: none;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .search-section, .contract-item, .filter-content, .preview-content {
    background-color: #2a2a2a;
  }
  
  .contract-name, .filter-title, .preview-title {
    color: #fff;
  }
  
  .detail-label, .option-text, .term-label {
    color: #ccc;
  }
  
  .contract-number, .detail-value, .term-value {
    color: #e6e6e6;
  }
} 