/* pages/profile/contracts/contracts.wxss */
.container {
  padding: 0;
  background-color: var(--bg-color-light);
  min-height: 100vh;
}

/* 筛选区域 */
.filter-section {
  background: #fff;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-tabs {
  display: flex;
  justify-content: space-around;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--text-color-secondary);
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  color: var(--primary-color);
  background-color: var(--primary-light);
  font-weight: 500;
}

/* 合同列表 */
.contracts-list {
  padding: 20rpx;
}

.contract-item {
  background: #fff;
  border-radius: var(--border-radius);
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: var(--shadow-light);
  position: relative;
  overflow: hidden;
}

.contract-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, var(--primary-color), var(--primary-light));
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.contract-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color-primary);
  flex: 1;
  margin-right: 20rpx;
}

.contract-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-signed {
  background: var(--success-light);
  color: var(--success-color);
}

.status-pending {
  background: var(--warning-light);
  color: var(--warning-color);
}

.status-expired {
  background: var(--error-light);
  color: var(--error-color);
}

.status-terminated {
  background: #f5f5f5;
  color: var(--text-color-secondary);
}

.contract-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: var(--text-color-secondary);
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: var(--text-color-primary);
  flex: 1;
  text-align: right;
}

.info-value.highlight {
  color: var(--primary-color);
  font-weight: 500;
}

.info-value.warning {
  color: var(--warning-color);
  font-weight: 500;
}

.contract-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--primary-color);
  color: #fff;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: var(--text-color-primary);
  border: 2rpx solid #e9ecef;
}

.action-btn.danger {
  background: var(--error-color);
  color: #fff;
}

.action-btn:hover {
  opacity: 0.8;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: var(--text-color-light);
  line-height: 1.6;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-color-secondary);
  margin-left: 20rpx;
}

/* 续签提醒 */
.renewal-reminder {
  background: linear-gradient(135deg, var(--warning-light), #fff5e6);
  border: 2rpx solid var(--warning-color);
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin: 20rpx;
  position: relative;
}

.reminder-icon {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  color: var(--warning-color);
}

.reminder-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--warning-color);
  margin-bottom: 10rpx;
}

.reminder-content {
  font-size: 26rpx;
  color: var(--text-color-primary);
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.reminder-action {
  display: flex;
  justify-content: flex-end;
}

.reminder-btn {
  background: var(--warning-color);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  background: var(--bg-color-light);
}

/* 下拉刷新样式 */
.refresh-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.refresh-text {
  font-size: 26rpx;
  color: var(--text-color-secondary);
  margin-left: 20rpx;
}

/* 合同预览浮层样式 */
.contract-preview {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-content {
  background: #fff;
  width: 90%;
  height: 80%;
  border-radius: var(--border-radius);
  display: flex;
  flex-direction: column;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color-primary);
}

.preview-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f8f9fa;
  color: var(--text-color-secondary);
}

.preview-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* 响应式适配 */
@media screen and (max-width: 320px) {
  .contract-item {
    padding: 20rpx;
  }
  
  .contract-title {
    font-size: 28rpx;
  }
  
  .filter-tab {
    padding: 16rpx 10rpx;
    font-size: 24rpx;
  }
}

/* 动画效果 */
.contract-item {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 长按选择效果 */
.contract-item.selecting {
  background: var(--primary-light);
  border: 2rpx solid var(--primary-color);
}

.contract-item.selected {
  background: var(--primary-light);
  border: 2rpx solid var(--primary-color);
  position: relative;
}

.contract-item.selected::after {
  content: '✓';
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
} 