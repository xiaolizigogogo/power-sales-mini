/* pages/profile/index/index.wxss */
@import '../../../styles/common.wxss';

page {
  background-color: #F5F7FA;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.container.loading {
  opacity: 0.6;
}

/* 下拉刷新提示 */
.refresh-tip {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #666;
  font-size: 28rpx;
}

.refresh-tip text {
  margin-left: 10rpx;
}

/* 顶部背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 360rpx;
  background: linear-gradient(180deg, #1890FF 0%, #40A9FF 100%);
  z-index: 1;
}

/* 用户信息区域 */
.user-section {
  position: relative;
  z-index: 2;
  padding: 40rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-level {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 4rpx 16rpx;
  background: #FFB800;
  border-radius: 20rpx;
  color: #fff;
  font-size: 20rpx;
  white-space: nowrap;
}

.info-right {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.edit-profile {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.edit-profile text {
  margin-right: 4rpx;
}

.company {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.phone {
  font-size: 26rpx;
  color: #999;
}

/* 数据概览卡片 */
.stats-card {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.divider {
  width: 2rpx;
  height: 60rpx;
  background: #eee;
  margin: 10rpx 0;
}

.value {
  display: block;
  font-size: 40rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
}

/* 快捷功能区 */
.quick-actions {
  margin: 30rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.quick-action-item text {
  font-size: 24rpx;
  color: #666;
}

/* 用电数据卡片 */
.power-card {
  margin: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #1890FF;
}

.power-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.power-item {
  text-align: center;
}

.item-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.item-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.number {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-right: 4rpx;
}

.unit {
  font-size: 24rpx;
  color: #999;
}

.highlight .number {
  color: #52C41A;
}

/* 功能菜单 */
.menu-section {
  margin: 30rpx;
}

.menu-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-left .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.text-wrapper {
  display: flex;
  flex-direction: column;
}

.text-wrapper .title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.text-wrapper .subtitle {
  font-size: 24rpx;
  color: #999;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.badge {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: #FF4D4F;
  border-radius: 16rpx;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

/* 登录/退出按钮 */
.action-button {
  margin-top: 60rpx;
}

.login-btn, .logout-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.login-btn {
  background: #1890FF;
  color: #fff;
}

.logout-btn {
  background: #fff;
  color: #666;
  border: 2rpx solid #ddd;
}

.action-button .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* 授权登录弹窗 */
.auth-dialog-content {
  padding: 40rpx 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 响应式适配 */
@media screen and (max-width: 350px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }
  
  .quick-actions {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }
  
  .user-info {
    flex-direction: column;
    text-align: center;
  }
  
  .avatar-container {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .profile-container {
    background-color: var(--bg-color-dark);
  }
  
  .menu-group {
    background: var(--card-bg-dark);
  }
  
  .quick-action-item {
    background: var(--card-bg-dark);
  }
  
  .logout-btn {
    background: var(--card-bg-dark);
  }
  
  .auth-dialog-content {
    background: var(--card-bg-dark);
  }
  
  .auth-btn-cancel {
    background: var(--bg-color-dark);
  }
} 