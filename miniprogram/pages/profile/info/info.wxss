/* pages/profile/info/info.wxss */

.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #e8e8e8;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #1989fa;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

.form-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-input-placeholder {
  color: #999;
}

.verify-btn {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.verify-btn.disabled {
  background: #ccc;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.submit-btn.disabled {
  background: #ccc;
}

.verify-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.verify-content {
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
}

.verify-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.verify-input {
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.verify-buttons {
  display: flex;
  gap: 20rpx;
}

.verify-btn-cancel,
.verify-btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.verify-btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.verify-btn-confirm {
  background: #1989fa;
  color: #fff;
}

.verify-btn-confirm.disabled {
  background: #ccc;
}

.phone-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.code-input-wrapper {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.verify-input {
  flex: 1;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.send-code-btn {
  width: 200rpx;
  background: #1989fa;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
}

.send-code-btn.disabled {
  background: #ccc;
}