.contract-detail {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #969799;
}

/* 详情内容 */
.detail-content {
  padding: 20rpx;
}

/* 合同头部 */
.contract-header {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.header-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-no {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
}

.contract-status {
  font-size: 28rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background-color: rgba(25, 137, 250, 0.1);
  color: #1989fa;
}

.contract-status.pending {
  background-color: rgba(255, 151, 106, 0.1);
  color: #ff976a;
}

.contract-status.signed {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.contract-status.completed {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.contract-status.cancelled {
  background-color: rgba(150, 151, 153, 0.1);
  color: #969799;
}

.status-desc {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.5;
  padding: 20rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #1989fa;
}

/* 信息区块 */
.info-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f2f3f5;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
}

.info-item .label {
  font-size: 28rpx;
  color: #646566;
  min-width: 160rpx;
  flex-shrink: 0;
}

.info-item .value {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
  word-break: break-all;
}

.info-item .value.highlight {
  color: #ee0a24;
  font-weight: 600;
}

/* 合同图片 */
.contract-images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.image-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f7f7f7;
}

.contract-img {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
  display: block;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-item:active .image-overlay {
  opacity: 1;
}

/* 空状态 */
.empty-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 60rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #ebedf0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons .van-button {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .contract-images {
    grid-template-columns: 1fr;
  }
  
  .info-item {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .info-item .label {
    min-width: auto;
  }
} 