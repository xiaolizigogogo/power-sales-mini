/* pages/menu/manager/customers/list.wxss */
.customer-list-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部菜单栏留出更多空间，避免遮挡 */
}

/* 头部统计 */
.header-stats {
  background: white;
  display: flex;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 40rpx;
  min-height: 40rpx;
}

.clear-btn {
  padding: 10rpx;
}

.filter-btn {
  padding: 10rpx;
}

/* 状态标签 */
.status-tabs {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  white-space: nowrap;
  overflow: hidden;
}

.tab-container {
  display: inline-flex;
  padding: 20rpx;
}

.tab-item {
  display: inline-flex;
  align-items: center;
  padding: 15rpx 25rpx;
  margin-right: 15rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #1890ff;
  color: white;
}

/* 待处理订单标签特殊样式 */
.tab-item[data-tab="pending_orders"] {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  position: relative;
  overflow: hidden;
  animation: pulse-glow 2s ease-in-out infinite alternate;
}

.tab-item[data-tab="pending_orders"]:not(.active) {
  background: linear-gradient(135deg, #fff5f5, #ffe6e6);
  color: #ff4d4f;
  border: 1px solid #ffccc7;
  animation: subtle-pulse 3s ease-in-out infinite;
}

.tab-item[data-tab="pending_orders"].active {
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
  color: white;
  box-shadow: 0 4px 12px rgba(255, 77, 79, 0.3);
  animation: none;
}

.tab-item[data-tab="pending_orders"] .tab-count {
  background: rgba(255, 255, 255, 0.9);
  color: #ff4d4f;
  font-weight: 600;
  animation: bounce 2s ease-in-out infinite;
}

.tab-item[data-tab="pending_orders"].active .tab-count {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  animation: none;
}

/* 动画效果 */
@keyframes pulse-glow {
  0% {
    box-shadow: 0 0 5px rgba(255, 77, 79, 0.4);
  }
  100% {
    box-shadow: 0 0 20px rgba(255, 77, 79, 0.6);
  }
}

@keyframes subtle-pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-2px);
  }
  60% {
    transform: translateY(-1px);
  }
}

.tab-label {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.tab-count {
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 操作栏 */
.action-bar {
  background: white;
  margin: 20rpx 30rpx;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.sort-buttons {
  display: flex;
}

.sort-btn {
  padding: 12rpx 20rpx;
  margin-right: 15rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.sort-btn.active {
