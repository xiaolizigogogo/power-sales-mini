/* pages/manager/profile/change-password.wxss */
.change-password-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

/* 头部信息 */
.header-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.input-group {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-color: #409EFF;
  background-color: #fff;
  box-shadow: 0 0 0 6rpx rgba(64, 158, 255, 0.1);
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.form-input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
}

.form-input::placeholder {
  color: #999;
}

.password-toggle {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  padding: 10rpx;
  margin: -10rpx;
}

.error-text {
  display: block;
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
  margin-left: 4rpx;
}

/* 密码强度指示器 */
.password-strength {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.strength-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.strength-indicator {
  display: flex;
  gap: 8rpx;
  margin-right: 16rpx;
}

.strength-bar {
  width: 40rpx;
  height: 6rpx;
  background-color: #e9ecef;
  border-radius: 3rpx;
  transition: all 0.3s ease;
}

.strength-bar.active.weak {
  background-color: #ff4d4f;
}

.strength-bar.active.medium {
  background-color: #faad14;
}

.strength-bar.active.strong {
  background-color: #52c41a;
}

.strength-text {
  font-size: 24rpx;
  font-weight: 500;
}

.strength-text.weak {
  color: #ff4d4f;
}

.strength-text.medium {
  color: #faad14;
}

.strength-text.strong {
  color: #52c41a;
}

/* 密码规则提示 */
.rules-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.rules-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  transition: all 0.3s ease;
}

.rule-item.valid {
  color: #52c41a;
}

.rule-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

.rule-item.valid .rule-icon {
  filter: hue-rotate(120deg) saturate(2);
}

.rule-text {
  font-size: 26rpx;
  color: #666;
}

.rule-item.valid .rule-text {
  color: #52c41a;
}

/* 安全提示 */
.security-tip {
  display: flex;
  align-items: flex-start;
  background-color: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1.6;
}

/* 操作按钮 */
.button-section {
  margin-top: 60rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #333;
}

.cancel-btn:active {
  transform: scale(0.98);
  background-color: #e0e0e0;
}

.confirm-btn {
  background: linear-gradient(135deg, #409EFF 0%, #5CB3FF 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(64, 158, 255, 0.3);
}

.confirm-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(64, 158, 255, 0.3);
}

.confirm-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .change-password-container {
    padding: 20rpx;
  }
  
  .header-section,
  .form-section,
  .rules-section {
    padding: 30rpx;
  }
  
  .security-tip {
    padding: 20rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .header-subtitle {
    font-size: 24rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-section {
  animation: fadeInUp 0.6s ease-out;
}

.form-section {
  animation: fadeInUp 0.8s ease-out;
}

.rules-section {
  animation: fadeInUp 1.0s ease-out;
}

.security-tip {
  animation: fadeInUp 1.2s ease-out;
}

.button-section {
  animation: fadeInUp 1.4s ease-out;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .change-password-container {
    background-color: #1a1a1a;
  }
  
  .header-section,
  .form-section,
  .rules-section {
    background-color: #2d2d2d;
  }
  
  .header-title,
  .form-label,
  .rules-title {
    color: #fff;
  }
  
  .header-subtitle,
  .rule-text {
    color: #ccc;
  }
  
  .input-group {
    background-color: #404040;
    border-color: #555;
  }
  
  .input-group:focus-within {
    background-color: #4a4a4a;
  }
  
  .form-input {
    color: #fff;
  }
  
  .form-input::placeholder {
    color: #999;
  }
  
  .password-strength {
    background-color: #404040;
  }
  
  .strength-label {
    color: #ccc;
  }
  
  .strength-bar {
    background-color: #555;
  }
  
  .security-tip {
    background-color: #1a1a1a;
    border-color: #333;
  }
  
  .tip-title,
  .tip-desc {
    color: #409EFF;
  }
  
  .cancel-btn {
    background-color: #404040;
    color: #fff;
  }
  
  .cancel-btn:active {
    background-color: #4a4a4a;
  }
} 