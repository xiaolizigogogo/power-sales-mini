/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 增加底部padding，避免被tabbar遮挡 */
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 用户电力信息卡片 */
.power-info-card {
  margin: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #1989fa 0%, #4bb0ff 100%);
  border-radius: 16rpx;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.2);
}

.power-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.power-info-header .title {
  font-size: 32rpx;
  font-weight: 500;
}

.power-info-header .date {
  font-size: 24rpx;
  opacity: 0.8;
}

.power-info-content {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.power-info-item {
  text-align: center;
}

.power-info-item .label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
  display: block;
}

.power-info-item .value {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

/* 搜索区域 */
.search-section {
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  padding: 24rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 36rpx;
  color: #969799;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  color: #323233;
}

.search-placeholder {
  color: #969799;
}

.clear-icon {
  font-size: 36rpx;
  color: #c8c9cc;
  padding: 10rpx;
}

.search-panel {
  background: #fff;
  padding: 24rpx;
  border-top: 2rpx solid #f5f5f5;
}

.panel-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  color: #323233;
  font-size: 28rpx;
}

.clear-btn {
  color: #969799;
  font-size: 24rpx;
  padding: 8rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.history-tag, .hot-tag {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 32rpx;
  max-width: 100%;
  transition: all 0.3s;
}

.history-tag {
  background-color: #f7f8fa;
  color: #323233;
}

.hot-tag {
  background-color: #fff7f7;
  color: #ee0a24;
}

.history-tag:active, .hot-tag:active {
  opacity: 0.7;
}

/* 筛选区域 */
.filter-section {
  background-color: #fff;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.advanced-filter {
  border-top: 2rpx solid #f5f5f5;
}

/* 产品列表 */
.product-list {
  padding: 24rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 24rpx;
}

/* 产品卡片 */
.product-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.product-card:active {
  transform: scale(0.98);
}

.product-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.product-tag {
  margin-right: 8rpx;
}

.product-info {
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 8rpx;
  display: block;
}

.product-category {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 16rpx;
  display: block;
}

.product-price {
  margin: 16rpx 0;
}

.price-value {
  font-size: 40rpx;
  font-weight: 500;
  color: #ee0a24;
}

.price-unit {
  font-size: 24rpx;
  color: #969799;
  margin-left: 4rpx;
}

.price-desc {
  font-size: 24rpx;
  color: #969799;
  display: block;
  margin-top: 8rpx;
}

.savings-info {
  display: flex;
  align-items: center;
  background-color: #fff7e6;
  padding: 16rpx;
  border-radius: 8rpx;
  margin: 16rpx 0;
}

.savings-icon {
  color: #ff976a;
  margin-right: 8rpx;
  font-size: 32rpx;
}

.savings-value {
  color: #ff976a;
  font-weight: 500;
  margin-left: 8rpx;
}

.product-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 16rpx 0;
}

.feature-tag {
  margin-bottom: 8rpx;
}

.suitable-info {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin: 16rpx 0;
  background-color: #f7f8fa;
  padding: 16rpx;
  border-radius: 8rpx;
  border-left: 8rpx solid #1989fa;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-btn {
  min-width: 160rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  color: #969799;
}

.loading-state text {
  margin-top: 16rpx;
  font-size: 28rpx;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  color: #969799;
}

.error-state text {
  margin: 16rpx 0;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx 0;
  color: #969799;
  font-size: 28rpx;
}

/* 响应式布局 */
@media screen and (min-width: 768px) {
  .power-info-content {
    grid-template-columns: repeat(4, 1fr);
  }

  .product-grid {
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  }
}

/* 页面容器 */
.products-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
}

/* 筛选栏 */
.filter-item {
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 24rpx;
  background-color: #f5f7fa;
  transition: all 0.3s;
}

.filter-item text {
  transition: color 0.3s;
}

.filter-item text.active {
  color: #1890ff;
  font-weight: 500;
}

/* 产品头部 */
.product-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.product-tag {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.product-tag.hot {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
}

.product-tag.new {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}

.product-tag.recommend {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 产品信息 */
.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
}

.savings {
  font-size: 26rpx;
  color: #ff6b6b;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
}

.savings-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 适用信息 */
.suitable-info {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 25rpx;
  background-color: #fafafa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
}

/* 产品底部 */
.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-detail {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(64, 158, 255, 0.3);
  transition: all 0.3s ease;
}

.view-detail:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(64, 158, 255, 0.4);
}

.customer-info {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.customer-count {
  color: var(--primary-color);
  font-weight: 600;
  margin-left: 8rpx;
}

/* 返回顶部按钮 */
.back-to-top {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(64, 158, 255, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}

.back-to-top:active {
  transform: scale(0.95);
}

.back-to-top-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
}

/* 响应式适配 */
@media screen and (max-width: 320px) {
  .container {
    padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); /* 小屏幕设备增加更多底部间距 */
  }
  
  .product-name {
    font-size: 30rpx;
  }
  
  .price-value {
    font-size: 32rpx;
  }
  
  .product-card {
    padding: 25rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .search-section,
  .filter-section,
  .product-card {
    background-color: #2d2d2d;
  }
  
  .search-bar {
    background-color: #3a3a3a;
    border-color: #4a4a4a;
  }
  
  .product-name {
    color: #fff;
  }
  
  .suitable-info {
    background-color: #3a3a3a;
  }
  
  .feature-tag {
    background-color: rgba(64, 158, 255, 0.1);
  }
} 