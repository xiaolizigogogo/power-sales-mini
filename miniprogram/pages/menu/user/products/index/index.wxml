<!--pages/menu/user/products/index/index.wxml-->
<view class="container">
  <!-- 搜索区域 -->
  <view class="search-section">
    <view class="search-bar">
      <view class="search-input-wrapper">
        <van-icon name="search" class="search-icon" />
        <input
          class="search-input"
          value="{{ searchKeyword }}"
          placeholder="搜索产品套餐"
          placeholder-class="search-placeholder"
          bindinput="onSearchInput"
          bindconfirm="onSearchConfirm"
          bindfocus="onSearchFocus"
          bindblur="onSearchBlur"
          confirm-type="search"
        />
        <van-icon 
          wx:if="{{ searchKeyword }}" 
          name="clear" 
          class="clear-icon" 
          bindtap="clearSearch"
        />
      </view>
    </view>
    
    <!-- 搜索历史和热门搜索 -->
    <view class="search-panel" wx:if="{{ searchFocused }}">
      <view class="search-history" wx:if="{{ searchHistory.length }}">
        <view class="panel-title">
          <text>搜索历史</text>
          <text class="clear-btn" bind:tap="clearSearchHistory">清空</text>
        </view>
        <view class="tag-list">
          <view 
            class="history-tag"
            wx:for="{{ searchHistory }}"
            wx:key="*this"
            bind:tap="onHistoryTap"
            data-keyword="{{ item }}"
          >{{ item }}</view>
        </view>
      </view>
      
      <view class="hot-search">
        <view class="panel-title">热门搜索</view>
        <view class="tag-list">
          <view 
            class="hot-tag"
            wx:for="{{ hotSearches }}"
            wx:key="*this"
            bind:tap="onHotSearchTap"
            data-keyword="{{ item }}"
          >{{ item }}</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 筛选区域 -->
  <view class="filter-section">
    <!-- 分类筛选 -->
    <van-tabs 
      active="{{ filters.category }}" 
      bind:change="onCategoryChange" 
      sticky
      swipeable
      animated
      color="#1989fa"
    >
      <van-tab 
        wx:for="{{ categories }}" 
        wx:key="id" 
        title="{{ item.name }}" 
        name="{{ item.id }}"
      />
    </van-tabs>


  </view>

  <!-- 产品列表 -->
  <view class="product-list {{ loading ? 'loading' : '' }}">
    <!-- 加载状态 -->
    <view class="loading-state" wx:if="{{ loading && !products.length }}">
      <van-loading type="spinner" color="#1989fa" />
      <text>加载中...</text>
    </view>

    <!-- 错误状态 -->
    <view class="error-state" wx:if="{{ error && !products.length }}">
      <van-icon name="warning-o" size="48rpx" color="#ee0a24"/>
      <text>{{ error }}</text>
      <van-button type="info" size="small" bind:tap="retryLoad">重试</van-button>
    </view>

    <!-- 空状态 -->
    <van-empty 
      wx:if="{{ !loading && !error && !products.length }}" 
      description="暂无相关产品" 
      image="search"
    />

    <!-- 产品卡片列表 -->
    <view class="product-grid">
      <view 
        class="product-card" 
        wx:for="{{ products }}" 
        wx:key="id" 
        bind:tap="onProductTap" 
        data-id="{{ item.id }}"
      >
        <!-- 产品标签 -->
        <view class="product-tags" wx:if="{{ item.tags.length }}">
          <van-tag 
            wx:for="{{ item.tags }}" 
            wx:key="text" 
            wx:for-item="tag"
            type="{{ tag.type }}"
            class="product-tag"
          >{{ tag.text }}</van-tag>
        </view>

        <!-- 产品信息 -->
        <view class="product-info">
          <text class="product-name">{{ item.name }}</text>
          <text class="product-category">{{ item.categoryName }}</text>
          <view class="product-price">
            <text class="price-value">¥{{ item.price }}</text>
            <text class="price-unit">/度</text>
          </view>
          <text class="price-desc">{{ item.priceDesc }}</text>
        </view>

        <!-- 预计节省 -->
        <view class="savings-info" wx:if="{{ item.estimatedSavings }}">
          <van-icon name="gold-coin-o" class="savings-icon"/>
          <text>预计年节省：</text>
          <text class="savings-value">¥{{ item.estimatedSavings }}</text>
        </view>

        <!-- 产品特性 -->
        <view class="product-features">
          <van-tag 
            wx:for="{{ item.features }}" 
            wx:key="*this"
            wx:for-item="feature"
            plain
            type="primary"
            size="medium"
            class="feature-tag"
          >{{ feature }}</van-tag>
        </view>

        <!-- 适用说明 -->
        <view class="suitable-info">
          {{ item.suitableDesc }}
        </view>

        <!-- 操作按钮 -->
        <view class="product-actions">
          <van-button 
            size="small" 
            plain 
            type="info" 
            catch:tap="onCalculatorTap"
            data-id="{{ item.id }}"
            class="action-btn"
          >计算收益</van-button>
          <van-button 
            size="small" 
            type="info" 
            catch:tap="onQuickOrderTap"
            data-id="{{ item.id }}"
            class="action-btn"
          >立即购买</van-button>
        </view>
      </view>
    </view>

    <!-- 加载更多 -->
    <view class="load-more" wx:if="{{ hasMore }}">
      <van-loading wx:if="{{ loading }}" type="spinner" size="24px" color="#1989fa"/>
      <text wx:else>上拉加载更多</text>
    </view>
  </view>
</view>

<!-- 筛选遮罩 -->
<view class="filter-mask {{showFilter ? 'show' : ''}}" bindtap="toggleFilter"></view> 