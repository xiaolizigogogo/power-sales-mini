/* 客户注册页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 步骤指示器 */
.step-indicator {
  background: white;
  padding: 40rpx 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.step-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.step-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #666;
}

.steps-progress {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}

.steps-progress::before {
  content: '';
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  right: 60rpx;
  height: 2rpx;
  background: #e5e5e5;
  z-index: 1;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  z-index: 2;
}

.step-item.active .step-number {
  background: #1989fa;
  color: white;
  border-color: #1989fa;
}

.step-item.active .step-name {
  color: #1989fa;
  font-weight: bold;
}

.step-number {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: white;
  border: 4rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  margin-bottom: 20rpx;
}

.step-info {
  text-align: center;
}

.step-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.step-description {
  font-size: 20rpx;
  color: #999;
  display: block;
}

/* 步骤内容 */
.step-content {
  flex: 1;
  padding: 0 30rpx;
}

.step-panel {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 微信授权面板 */
.auth-panel {
  text-align: center;
  padding: 40rpx 0;
}

.auth-icon {
  margin-bottom: 40rpx;
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.auth-tips {
  text-align: left;
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 40rpx;
}

.auth-tips text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.auth-tips text:last-child {
  margin-bottom: 0;
}

.auth-button {
  width: 100%;
  margin-top: 40rpx;
}

/* 授权成功状态 */
.auth-success {
  padding: 40rpx 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 30rpx;
  border: 4rpx solid #1989fa;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  margin-bottom: 40rpx;
}

.user-nickname {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.auth-status {
  display: block;
  font-size: 26rpx;
  color: #52c41a;
}

.next-button {
  width: 100%;
}

/* 授权错误状态 */
.auth-error {
  background: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}

.error-text {
  display: block;
  font-size: 26rpx;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title text {
  margin-left: 15rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-scroll {
  max-height: 1000rpx;
  margin-bottom: 30rpx;
}

/* 验证码行 */
.verify-code-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.verify-code-row .van-field {
  flex: 1;
}

.code-button {
  flex-shrink: 0;
  width: 180rpx;
}

/* 表单提示 */
.form-tips {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.form-tips text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.form-tips text:last-child {
  margin-bottom: 0;
}

/* 企业名录匹配 */
.company-matcher {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.matcher-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.matcher-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.manual-input {
  font-size: 24rpx;
  color: #1989fa;
  text-decoration: underline;
}

.company-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.company-item {
  background: white;
  border-radius: 10rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.company-item:last-child {
  margin-bottom: 0;
}

.company-item:active {
  border-color: #1989fa;
  background: #f0f9ff;
}

.company-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.company-code {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.company-address {
  font-size: 24rpx;
  color: #999;
}

/* 选择器值 */
.picker-value {
  font-size: 28rpx;
  color: #333;
}

/* 上传区域 */
.upload-section {
  margin-top: 20rpx;
}

.upload-item {
  margin-bottom: 40rpx;
}

.upload-item:last-child {
  margin-bottom: 0;
}

.upload-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.upload-label text:first-child {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.upload-tips {
  font-size: 24rpx;
  color: #999;
}

.upload-area {
  border: 2rpx dashed #d9d9d9;
  border-radius: 15rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #1989fa;
  background: #f0f9ff;
}

.upload-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin: 20rpx 0;
}

.upload-button {
  display: inline-block;
  background: #1989fa;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
}

/* 已上传图片 */
.uploaded-image {
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.uploaded-image image {
  width: 100%;
  height: 300rpx;
  object-fit: contain;
}

.image-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  gap: 15rpx;
}

.image-actions .van-icon {
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 15rpx;
  border-radius: 50%;
  font-size: 32rpx;
}

/* OCR处理提示 */
.ocr-processing {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  padding: 30rpx;
  background: #f0f9ff;
  border-radius: 15rpx;
  margin: 20rpx 0;
}

.ocr-processing text {
  font-size: 26rpx;
  color: #1989fa;
}

/* 认证说明 */
.auth-notice {
  background: #fff7e6;
  border: 2rpx solid #ffd591;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.notice-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #fa8c16;
  margin-bottom: 20rpx;
}

.notice-title text {
  margin-left: 10rpx;
}

.notice-content text {
  display: block;
  font-size: 24rpx;
  color: #d46b08;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.notice-content text:last-child {
  margin-bottom: 0;
}

/* 步骤操作按钮 */
.step-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.step-actions .van-button {
  flex: 1;
}

/* 底部信息 */
.bottom-info {
  padding: 40rpx 30rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.link-text {
  color: #fff;
  text-decoration: underline;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .step-indicator {
    padding: 30rpx 20rpx;
  }
  
  .step-content {
    padding: 0 20rpx;
  }
  
  .step-panel {
    padding: 30rpx;
  }
  
  .step-title {
    font-size: 32rpx;
  }
  
  .auth-title {
    font-size: 32rpx;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .step-panel {
    background: #1a1a1a;
    border: 2rpx solid #333;
  }
  
  .step-title,
  .auth-title,
  .section-title,
  .user-nickname {
    color: #fff;
  }
  
  .step-desc,
  .auth-desc,
  .upload-text {
    color: #ccc;
  }
  
  .auth-tips,
  .form-tips {
    background: #2a2a2a;
    border: 2rpx solid #333;
  }
  
  .company-matcher {
    background: #2a2a2a;
    border: 2rpx solid #333;
  }
  
  .company-item {
    background: #1a1a1a;
    border-color: #333;
  }
  
  .upload-area {
    background: #2a2a2a;
    border-color: #555;
  }
  
  .uploaded-image {
    background: #2a2a2a;
  }
} 