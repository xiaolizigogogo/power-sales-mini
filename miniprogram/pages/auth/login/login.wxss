.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #fff;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  padding-top: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  background: linear-gradient(135deg, #409EFF, #67C23A);
  border-radius: 50%;
  color: white;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.login-form {
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e4e7ed;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.login-button {
  width: 100%;
  height: 88rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #409EFF;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.login-button:disabled {
  opacity: 0.6;
  background-color: #c0c4cc;
}

.login-button:not(:disabled):active {
  background-color: #337ECC;
  transform: scale(0.98);
}

.button-loading {
  opacity: 0.8;
}

.form-footer {
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
}

.form-footer .text-primary {
  color: #409EFF;
  margin-left: 10rpx;
}

.login-tips {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 0 40rpx;
}

.login-tips .text-primary {
  color: #409EFF;
}

/* 微信登录按钮 */
.wechat-login {
  margin: 40rpx 30rpx;
}

.button-wechat {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 88rpx;
  background: #07C160;
  color: #FFFFFF;
  border-radius: 44rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 分隔线 */
.divider {
  position: relative;
  text-align: center;
  margin: 40rpx 0;
}

.divider::before,
.divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1px;
  background: #EEEEEE;
}

.divider::before {
  left: 50rpx;
}

.divider::after {
  right: 50rpx;
}

.divider text {
  color: #999999;
  font-size: 24rpx;
  background: #FFFFFF;
  padding: 0 20rpx;
} 