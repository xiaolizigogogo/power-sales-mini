/* pages/auth/username-login/index.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #409EFF 0%, #5CB3FF 100%);
  display: flex;
  flex-direction: column;
  padding: 0 60rpx;
}

/* 登录头部 */
.login-header {
  text-align: center;
  padding: 120rpx 0 80rpx;
  color: #fff;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
  border-radius: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 400;
}

/* 登录表单 */
.login-form {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.input-group {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-color: #409EFF;
  background-color: #fff;
  box-shadow: 0 0 0 6rpx rgba(64, 158, 255, 0.1);
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.form-input {
  flex: 1;
  height: 96rpx;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
}

.form-input::placeholder {
  color: #999;
}

.password-toggle {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  padding: 10rpx;
  margin: -10rpx;
}

/* 复选框 */
.checkbox-group {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  transition: all 0.3s ease;
}

.checkbox.checked {
  border-color: #409EFF;
  background-color: #409EFF;
}

.check-icon {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

.checkbox-text {
  font-size: 26rpx;
  color: #666;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #409EFF 0%, #5CB3FF 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(64, 158, 255, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 20rpx rgba(64, 158, 255, 0.3);
}

.login-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 微信绑定提示 */
.wechat-bind-tip {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #e6f7ff;
  border-radius: 12rpx;
  border: 1rpx solid #91d5ff;
}

.tip-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1.5;
}

/* 登录底部 */
.login-footer {
  margin-top: 60rpx;
  color: #fff;
}

.footer-links {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.link {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
  padding: 10rpx;
  transition: all 0.3s ease;
}

.link:active {
  color: #fff;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 微信登录 */
.wechat-login {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.wechat-login:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.wechat-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.wechat-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

/* 绑定微信弹窗 */
.bind-popup {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: 600rpx;
  max-width: 90vw;
}

.bind-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.bind-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.bind-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.bind-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.bind-info {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-value {
  font-size: 26rpx;
  color: #666;
}

.bind-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background-color: #409EFF;
  color: #fff;
}

.action-btn.primary:active {
  transform: scale(0.98);
  background-color: #3a8ee6;
}

.action-btn.secondary {
  background-color: #f0f0f0;
  color: #333;
}

.action-btn.secondary:active {
  transform: scale(0.98);
  background-color: #e0e0e0;
}

/* 快速登录提示 */
.quick-login-tip {
  margin-top: 60rpx;
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
}

.tip-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
}

.demo-accounts {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.demo-account {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.demo-account:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.demo-username {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

.demo-password {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-family: 'Courier New', monospace;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .login-container {
    padding: 0 40rpx;
  }
  
  .login-header {
    padding: 80rpx 0 60rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
  
  .login-form {
    padding: 40rpx 30rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.login-header {
  animation: fadeInUp 0.6s ease-out;
}

.login-form {
  animation: fadeInUp 0.8s ease-out;
}

.login-footer {
  animation: fadeInUp 1.0s ease-out;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .wechat-bind-tip {
    background-color: #1a1a1a;
    border-color: #333;
  }
  
  .tip-text {
    color: #409EFF;
  }
  
  .bind-popup {
    background-color: #2d2d2d;
  }
  
  .bind-title {
    color: #fff;
  }
  
  .bind-subtitle,
  .info-value {
    color: #ccc;
  }
  
  .info-label {
    color: #fff;
  }
  
  .info-row {
    border-bottom-color: #404040;
  }
  
  .action-btn.secondary {
    background-color: #404040;
    color: #fff;
  }
  
  .action-btn.secondary:active {
    background-color: #4a4a4a;
  }
} 