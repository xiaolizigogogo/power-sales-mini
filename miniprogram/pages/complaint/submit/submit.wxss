.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.form-group {
  margin-bottom: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 投诉类型选择器 */
.type-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  padding: 16rpx 30rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.type-item.selected {
  background: #e6f3ff;
  color: #409eff;
  font-weight: 500;
}

/* 投诉内容输入框 */
.complaint-content {
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 图片上传 */
.image-uploader {
  padding: 20rpx 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-btn .icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.upload-btn .text {
  font-size: 24rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100% !important;
  margin-top: 20rpx;
  background: #409eff !important;
  border: none;
}

/* 温馨提示 */
.tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #fff7e6;
  border-radius: 8rpx;
}

.tips-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tips-content text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
} 