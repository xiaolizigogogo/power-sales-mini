.container {
  padding: 20rpx;
}

.settings-list {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.setting-name {
  font-size: 28rpx;
  color: #333;
}

.setting-right {
  display: flex;
  align-items: center;
}

.action-button {
  background-color: #409EFF;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
} 