/* pages/calculator/index/index.wxss */

.calculator-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 100rpx;
}

/* 头部区域 */
.header-section {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.header-section .title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-section .subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
}

/* 提示轮播 */
.tips-carousel {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  backdrop-filter: blur(10rpx);
}

.tip-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  line-height: 1.4;
}

/* 表单区域 */
.form-section {
  background: white;
  margin: 40rpx 30rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #667eea;
  border: 1rpx solid #667eea;
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.label-text {
  margin-right: 8rpx;
}

.required {
  color: #ff4d4f;
  font-size: 24rpx;
}

.input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 80rpx 0 24rpx;
  font-size: 30rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.form-input.error {
  border-color: #ff4d4f;
}

.input-unit {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
  pointer-events: none;
}

.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 选择器样式 */
.form-picker {
  height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-picker.error {
  border-color: #ff4d4f;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  transform: rotate(90deg);
}

/* 操作按钮 */
.form-actions {
  margin-top: 60rpx;
}

.calculate-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  border-radius: 44rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.calculate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.calculate-btn[disabled] {
  opacity: 0.6;
}

.action-links {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.link-btn {
  font-size: 28rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
}

/* 结果展示区域 */
.results-section {
  background: white;
  margin: 0 30rpx 40rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.results-section .section-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.subtitle-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 推荐产品卡片 */
.recommended-card {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border: 2rpx solid #667eea;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.recommend-badge {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.share-btn {
  background: #f8f9fa;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  border: 1rpx solid #667eea;
}

.product-info {
  margin-bottom: 30rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.savings-highlight {
  font-size: 28rpx;
  color: #52c41a;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
}

.calculation-details {
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.card-actions {
  display: flex;
  gap: 20rpx;
}

.detail-btn, .order-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-btn {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.order-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
}

/* 其他产品列表 */
.other-products {
  margin-top: 40rpx;
}

.section-subtitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 1rpx solid #e8e8e8;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.product-price {
  font-size: 24rpx;
  color: #667eea;
}

.savings-info {
  margin-bottom: 20rpx;
}

.savings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.savings-label {
  font-size: 24rpx;
  color: #666;
}

.savings-value {
  font-size: 24rpx;
  font-weight: 500;
}

.savings-value.positive {
  color: #52c41a;
}

.savings-value.negative {
  color: #ff4d4f;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-link {
  font-size: 26rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
}

.action-link.primary {
  background: #667eea;
  color: white;
  border-radius: 8rpx;
}

/* 计算说明 */
.calculation-note {
  margin-top: 40rpx;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  border-radius: 12rpx;
  padding: 24rpx;
}

.note-title {
  font-size: 28rpx;
  color: #52c41a;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.note-content text {
  display: block;
  font-size: 24rpx;
  color: #52c41a;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

/* 详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-section .section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.info-value.highlight {
  color: #667eea;
  font-weight: bold;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #e8e8e8;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  background: white;
}

.modal-btn.primary {
  color: #667eea;
  border-left: 1rpx solid #e8e8e8;
}

.modal-btn.secondary {
  color: #999;
}

/* 底部操作区域 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx 40rpx;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.contact-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .header-section {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .header-section .title {
    font-size: 40rpx;
  }
  
  .form-section {
    margin: 30rpx 20rpx;
    padding: 30rpx;
  }
  
  .results-section {
    margin: 0 20rpx 30rpx;
    padding: 30rpx;
  }
  
  .detail-modal {
    padding: 20rpx;
  }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  0% {
    transform: translateY(20rpx);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
} 