<view class="container">
  <!-- 自定义导航栏 -->
  <view class="custom-navbar">
    <text class="navbar-title">客户匹配分析</text>
  </view>

  <!-- 步骤指示器 -->
  <view class="step-indicator">
    <view class="step-list">
      <view 
        class="step-item {{currentStep >= 0 ? 'active' : ''}} {{currentStep > 0 ? 'completed' : ''}}"
        wx:for="{{['基本信息', '用电设施', '用电量', '企业特征', '管理能力', '特殊需求']}}"
        wx:key="*this"
        wx:for-index="index"
      >
        <view class="step-number">{{index + 1}}</view>
        <text class="step-text">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 表单内容 -->
  <view class="form-content" wx:if="{{!showResults}}">
    <!-- 第一步：基本信息 -->
    <view class="form-step" wx:if="{{currentStep === 0}}">
      <view class="step-title">企业基本信息</view>
      <view class="form-group">
        <view class="form-item">
          <text class="label">企业名称 *</text>
          <input 
            class="input" 
            placeholder="请输入企业名称"
            value="{{basicInfo.companyName}}"
            data-field="companyName"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">统一社会信用代码</text>
          <input 
            class="input" 
            placeholder="请输入统一社会信用代码"
            value="{{basicInfo.creditCode}}"
            data-field="creditCode"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">法定代表人</text>
          <input 
            class="input" 
            placeholder="请输入法定代表人"
            value="{{basicInfo.legalPerson}}"
            data-field="legalPerson"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">工商注册地</text>
          <input 
            class="input" 
            placeholder="请输入工商注册地"
            value="{{basicInfo.registeredAddress}}"
            data-field="registeredAddress"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">企业开户行</text>
          <input 
            class="input" 
            placeholder="请输入企业开户行"
            value="{{basicInfo.bankName}}"
            data-field="bankName"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">账号</text>
          <input 
            class="input" 
            placeholder="请输入账号"
            value="{{basicInfo.bankAccount}}"
            data-field="bankAccount"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">购电联系人</text>
          <input 
            class="input" 
            placeholder="请输入购电联系人"
            value="{{basicInfo.contactPerson}}"
            data-field="contactPerson"
            bindinput="onBasicInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">联系电话</text>
          <input 
            class="input" 
            placeholder="请输入联系电话"
            value="{{basicInfo.contactPhone}}"
            data-field="contactPhone"
            bindinput="onBasicInfoInput"
          />
        </view>
      </view>
    </view>

    <!-- 第二步：用电设施信息 -->
    <view class="form-step" wx:if="{{currentStep === 1}}">
      <view class="step-title">用电设施信息</view>
      <view class="form-group">
        <view class="form-item">
          <text class="label">变压器数量（台）</text>
          <input 
            class="input" 
            type="number"
            placeholder="请输入变压器数量"
            value="{{facilityInfo.transformerCount}}"
            data-field="transformerCount"
            bindinput="onFacilityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">变压器总容量（kVA）</text>
          <input 
            class="input" 
            type="number"
            placeholder="请输入变压器总容量"
            value="{{facilityInfo.totalCapacity}}"
            data-field="totalCapacity"
            bindinput="onFacilityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">电压等级（kV）</text>
          <input 
            class="input" 
            placeholder="请输入电压等级"
            value="{{facilityInfo.voltageLevel}}"
            data-field="voltageLevel"
            bindinput="onFacilityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">用电性质</text>
          <input 
            class="input" 
            placeholder="请输入用电性质"
            value="{{facilityInfo.electricityNature}}"
            data-field="electricityNature"
            bindinput="onFacilityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">用户营销编号1</text>
          <input 
            class="input" 
            placeholder="请输入用户营销编号"
            value="{{facilityInfo.userCodes[0]}}"
            data-index="0"
            bindinput="onUserCodeInput"
          />
        </view>
        <view class="form-item">
          <text class="label">用户营销编号2</text>
          <input 
            class="input" 
            placeholder="请输入用户营销编号"
            value="{{facilityInfo.userCodes[1]}}"
            data-index="1"
            bindinput="onUserCodeInput"
          />
        </view>
        <view class="form-item">
          <text class="label">用户营销编号3</text>
          <input 
            class="input" 
            placeholder="请输入用户营销编号"
            value="{{facilityInfo.userCodes[2]}}"
            data-index="2"
            bindinput="onUserCodeInput"
          />
        </view>
      </view>
    </view>

    <!-- 第三步：用电量信息 -->
    <view class="form-step" wx:if="{{currentStep === 2}}">
      <view class="step-title">用电量信息</view>
      <view class="form-group">
        <view class="form-item">
          <text class="label">年度总用电量（万千瓦时） *</text>
          <input 
            class="input" 
            type="digit"
            placeholder="请输入年度总用电量"
            value="{{electricityInfo.annualTotal}}"
            data-field="annualTotal"
            bindinput="onElectricityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">平均月用电量（万千瓦时）</text>
          <input 
            class="input" 
            type="digit"
            placeholder="请输入平均月用电量"
            value="{{electricityInfo.averageMonthly}}"
            data-field="averageMonthly"
            bindinput="onElectricityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">最大月用电量（万千瓦时）</text>
          <input 
            class="input" 
            type="digit"
            placeholder="请输入最大月用电量"
            value="{{electricityInfo.maxMonthly}}"
            data-field="maxMonthly"
            bindinput="onElectricityInfoInput"
          />
        </view>
        <view class="form-item">
          <text class="label">最小月用电量（万千瓦时）</text>
          <input 
            class="input" 
            type="digit"
            placeholder="请输入最小月用电量"
            value="{{electricityInfo.minMonthly}}"
            data-field="minMonthly"
            bindinput="onElectricityInfoInput"
          />
        </view>
      </view>

      <!-- 月度用电量分布 -->
      <view class="monthly-data-section">
        <view class="section-title">月度用电量分布（最近12个月）</view>
        <view class="monthly-data-list">
          <view 
            class="monthly-data-item"
            wx:for="{{electricityInfo.monthlyData}}"
            wx:key="*this"
            wx:for-index="month"
          >
            <view class="month-header">{{month + 1}}月</view>
            <view class="month-inputs">
              <input 
                class="month-input" 
                type="digit"
                placeholder="总电量"
                value="{{item.total}}"
                data-month="{{month}}"
                data-field="total"
                bindinput="onMonthlyDataInput"
              />
              <input 
                class="month-input" 
                type="digit"
                placeholder="尖峰"
                value="{{item.peak}}"
                data-month="{{month}}"
                data-field="peak"
                bindinput="onMonthlyDataInput"
              />
              <input 
                class="month-input" 
                type="digit"
                placeholder="高峰"
                value="{{item.high}}"
                data-month="{{month}}"
                data-field="high"
                bindinput="onMonthlyDataInput"
              />
              <input 
                class="month-input" 
                type="digit"
                placeholder="平时"
                value="{{item.normal}}"
                data-month="{{month}}"
                data-field="normal"
                bindinput="onMonthlyDataInput"
              />
              <input 
                class="month-input" 
                type="digit"
                placeholder="谷时"
                value="{{item.valley}}"
                data-month="{{month}}"
                data-field="valley"
                bindinput="onMonthlyDataInput"
              />
            </view>
          </view>
        </view>
      </view>

      <!-- 用电稳定性评估 -->
      <view class="assessment-section">
        <view class="section-title">用电稳定性评估</view>
        <view class="assessment-group">
          <view class="assessment-item">
            <text class="assessment-label">月度用电量波动</text>
            <radio-group 
              class="radio-group"
              data-category="stabilityAssessment"
              data-field="monthlyFluctuation"
              bindchange="onAssessmentChange"
            >
              <label class="radio-item">
                <radio value="stable" checked="{{stabilityAssessment.monthlyFluctuation === 'stable'}}" />
                <text>稳定（波动<10%）</text>
              </label>
              <label class="radio-item">
                <radio value="normal" checked="{{stabilityAssessment.monthlyFluctuation === 'normal'}}" />
                <text>一般（波动10-30%）</text>
              </label>
              <label class="radio-item">
                <radio value="large" checked="{{stabilityAssessment.monthlyFluctuation === 'large'}}" />
                <text>较大（波动>30%）</text>
              </label>
            </radio-group>
          </view>
          <view class="assessment-item">
            <text class="assessment-label">季节性用电特征</text>
            <radio-group 
              class="radio-group"
              data-category="stabilityAssessment"
              data-field="seasonalFeature"
              bindchange="onAssessmentChange"
            >
              <label class="radio-item">
                <radio value="none" checked="{{stabilityAssessment.seasonalFeature === 'none'}}" />
                <text>无明显季节性</text>
              </label>
              <label class="radio-item">
                <radio value="summer" checked="{{stabilityAssessment.seasonalFeature === 'summer'}}" />
                <text>夏季用电高峰</text>
              </label>
              <label class="radio-item">
                <radio value="winter" checked="{{stabilityAssessment.seasonalFeature === 'winter'}}" />
                <text>冬季用电高峰</text>
              </label>
              <label class="radio-item">
                <radio value="spring_autumn" checked="{{stabilityAssessment.seasonalFeature === 'spring_autumn'}}" />
                <text>春秋季用电高峰</text>
              </label>
            </radio-group>
          </view>
        </view>
      </view>
    </view>

    <!-- 第四步：企业特征信息 -->
    <view class="form-step" wx:if="{{currentStep === 3}}">
      <view class="step-title">企业特征信息</view>
      <view class="form-group">
        <view class="form-item">
          <text class="label">企业规模</text>
          <radio-group 
            class="radio-group"
            data-category="companyFeatures"
            data-field="companySize"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="large" checked="{{companyFeatures.companySize === 'large'}}" />
              <text>大型企业（年用电量>1000万度）</text>
            </label>
            <label class="radio-item">
              <radio value="medium" checked="{{companyFeatures.companySize === 'medium'}}" />
              <text>中型企业（年用电量100-1000万度）</text>
            </label>
            <label class="radio-item">
              <radio value="small" checked="{{companyFeatures.companySize === 'small'}}" />
              <text>小型企业（年用电量<100万度）</text>
            </label>
          </radio-group>
        </view>
        <view class="form-item">
          <text class="label">所属行业类型</text>
          <input 
            class="input" 
            placeholder="请输入所属行业类型"
            value="{{companyFeatures.industryType}}"
            data-field="industryType"
            bindinput="onCompanyFeatureInput"
          />
        </view>
        <view class="form-item">
          <text class="label">主要产品/服务</text>
          <input 
            class="input" 
            placeholder="请输入主要产品/服务"
            value="{{companyFeatures.mainProduct}}"
            data-field="mainProduct"
            bindinput="onCompanyFeatureInput"
          />
        </view>
        <view class="form-item">
          <text class="label">风险承受能力</text>
          <radio-group 
            class="radio-group"
            data-category="companyFeatures"
            data-field="riskTolerance"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="low" checked="{{companyFeatures.riskTolerance === 'low'}}" />
              <text>低（希望价格稳定）</text>
            </label>
            <label class="radio-item">
              <radio value="medium" checked="{{companyFeatures.riskTolerance === 'medium'}}" />
              <text>中等（可接受小幅波动）</text>
            </label>
            <label class="radio-item">
              <radio value="high" checked="{{companyFeatures.riskTolerance === 'high'}}" />
              <text>高（愿意承担风险）</text>
            </label>
            <label class="radio-item">
              <radio value="very_high" checked="{{companyFeatures.riskTolerance === 'very_high'}}" />
              <text>很高（追求最低价格）</text>
            </label>
          </radio-group>
        </view>
      </view>
    </view>

    <!-- 第五步：管理能力信息 -->
    <view class="form-step" wx:if="{{currentStep === 4}}">
      <view class="step-title">管理能力信息</view>
      <view class="form-group">
        <view class="form-item">
          <text class="label">是否有专业能源管理团队</text>
          <radio-group 
            class="radio-group"
            data-category="managementCapability"
            data-field="energyTeam"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="professional" checked="{{managementCapability.energyTeam === 'professional'}}" />
              <text>有专业团队</text>
            </label>
            <label class="radio-item">
              <radio value="part_time" checked="{{managementCapability.energyTeam === 'part_time'}}" />
              <text>有兼职人员</text>
            </label>
            <label class="radio-item">
              <radio value="none" checked="{{managementCapability.energyTeam === 'none'}}" />
              <text>无专门人员</text>
            </label>
          </radio-group>
        </view>
        <view class="form-item">
          <text class="label">对电力市场的了解程度</text>
          <radio-group 
            class="radio-group"
            data-category="managementCapability"
            data-field="marketKnowledge"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="very_knowledgeable" checked="{{managementCapability.marketKnowledge === 'very_knowledgeable'}}" />
              <text>非常了解</text>
            </label>
            <label class="radio-item">
              <radio value="knowledgeable" checked="{{managementCapability.marketKnowledge === 'knowledgeable'}}" />
              <text>比较了解</text>
            </label>
            <label class="radio-item">
              <radio value="normal" checked="{{managementCapability.marketKnowledge === 'normal'}}" />
              <text>一般了解</text>
            </label>
            <label class="radio-item">
              <radio value="none" checked="{{managementCapability.marketKnowledge === 'none'}}" />
              <text>不了解</text>
            </label>
          </radio-group>
        </view>
        <view class="form-item">
          <text class="label">是否有储能设备</text>
          <radio-group 
            class="radio-group"
            data-category="managementCapability"
            data-field="storageEquipment"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="yes" checked="{{managementCapability.storageEquipment === 'yes'}}" />
              <text>有</text>
            </label>
            <label class="radio-item">
              <radio value="no" checked="{{managementCapability.storageEquipment === 'no'}}" />
              <text>无</text>
            </label>
            <label class="radio-item">
              <radio value="planned" checked="{{managementCapability.storageEquipment === 'planned'}}" />
              <text>计划建设</text>
            </label>
          </radio-group>
        </view>
        <view class="form-item">
          <text class="label">用电时间是否可以调整</text>
          <radio-group 
            class="radio-group"
            data-category="managementCapability"
            data-field="timeAdjustable"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="flexible" checked="{{managementCapability.timeAdjustable === 'flexible'}}" />
              <text>可以灵活调整</text>
            </label>
            <label class="radio-item">
              <radio value="slight" checked="{{managementCapability.timeAdjustable === 'slight'}}" />
              <text>可以小幅调整</text>
            </label>
            <label class="radio-item">
              <radio value="no" checked="{{managementCapability.timeAdjustable === 'no'}}" />
              <text>基本不能调整</text>
            </label>
          </radio-group>
        </view>
      </view>
    </view>

    <!-- 第六步：特殊需求 -->
    <view class="form-step" wx:if="{{currentStep === 5}}">
      <view class="step-title">特殊需求与偏好</view>
      <view class="form-group">
        <view class="form-item">
          <text class="label">价格要求</text>
          <textarea 
            class="textarea" 
            placeholder="请描述价格要求"
            value="{{specialNeeds.priceRequirement}}"
            data-field="priceRequirement"
            bindinput="onSpecialNeedInput"
          />
        </view>
        <view class="form-item">
          <text class="label">服务要求</text>
          <textarea 
            class="textarea" 
            placeholder="请描述服务要求"
            value="{{specialNeeds.serviceRequirement}}"
            data-field="serviceRequirement"
            bindinput="onSpecialNeedInput"
          />
        </view>
        <view class="form-item">
          <text class="label">技术需求</text>
          <textarea 
            class="textarea" 
            placeholder="请描述技术需求"
            value="{{specialNeeds.technicalRequirement}}"
            data-field="technicalRequirement"
            bindinput="onSpecialNeedInput"
          />
        </view>
        <view class="form-item">
          <text class="label">合同期限偏好</text>
          <radio-group 
            class="radio-group"
            data-category="specialNeeds"
            data-field="contractPeriod"
            bindchange="onAssessmentChange"
          >
            <label class="radio-item">
              <radio value="1" checked="{{specialNeeds.contractPeriod === '1'}}" />
              <text>1年</text>
            </label>
            <label class="radio-item">
              <radio value="2" checked="{{specialNeeds.contractPeriod === '2'}}" />
              <text>2年</text>
            </label>
            <label class="radio-item">
              <radio value="3" checked="{{specialNeeds.contractPeriod === '3'}}" />
              <text>3年</text>
            </label>
          </radio-group>
        </view>
      </view>
    </view>
  </view>

  <!-- 匹配结果展示 -->
  <view class="results-content" wx:if="{{showResults}}">
    <view class="results-header">
      <text class="results-title">匹配分析结果</text>
    </view>
    
    <view class="recommendations-list">
      <view 
        class="recommendation-item"
        wx:for="{{matchingResults.recommendations}}"
        wx:key="rank"
      >
        <view class="recommendation-header">
          <view class="rank-badge">第{{item.rank}}推荐</view>
          <view class="contract-type">{{item.type}}</view>
          <view class="match-score">{{item.score}}分</view>
        </view>
        <view class="match-level">{{item.matchLevel}}</view>
        <view class="recommendation-reason">
          <text class="reason-label">推荐理由：</text>
          <text class="reason-text">{{item.reason}}</text>
        </view>
        <view class="risk-warning">
          <text class="risk-label">风险提示：</text>
          <text class="risk-text">{{item.risk}}</text>
        </view>
      </view>
    </view>

    <view class="score-details">
      <view class="score-title">详细评分</view>
      <view class="score-list">
        <view class="score-item">
          <text class="score-label">固定价合同</text>
          <text class="score-value">{{matchingResults.fixedPrice}}分</text>
        </view>
        <view class="score-item">
          <text class="score-label">固定服务费合同</text>
          <text class="score-value">{{matchingResults.fixedServiceFee}}分</text>
        </view>
        <view class="score-item">
          <text class="score-label">价差分成合同</text>
          <text class="score-value">{{matchingResults.priceDifference}}分</text>
        </view>
        <view class="score-item">
          <text class="score-label">市场成交价合同</text>
          <text class="score-value">{{matchingResults.marketPrice}}分</text>
        </view>
        <view class="score-item">
          <text class="score-label">现货分时合同</text>
          <text class="score-value">{{matchingResults.spotTime}}分</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部操作按钮 -->
  <view class="bottom-actions">
    <view class="action-buttons" wx:if="{{!showResults}}">
      <button 
        class="action-btn secondary"
        wx:if="{{currentStep > 0}}"
        bindtap="prevStep"
      >上一步</button>
      <button 
        class="action-btn secondary"
        bindtap="saveDraft"
      >保存草稿</button>
      <button 
        class="action-btn secondary"
        bindtap="loadDraft"
      >加载草稿</button>
      <button 
        class="action-btn secondary"
        bindtap="resetForm"
      >重置</button>
      <button 
        class="action-btn primary"
        wx:if="{{currentStep < totalSteps - 1}}"
        bindtap="nextStep"
      >下一步</button>
      <button 
        class="action-btn primary"
        wx:if="{{currentStep === totalSteps - 1}}"
        bindtap="submitCustomerInfo"
        loading="{{loading}}"
      >提交分析</button>
    </view>
    
    <view class="action-buttons" wx:if="{{showResults}}">
      <button 
        class="action-btn secondary"
        bindtap="resetForm"
      >重新分析</button>
      <button 
        class="action-btn primary"
        bindtap="submitCustomerInfo"
      >保存结果</button>
    </view>
  </view>
</view> 