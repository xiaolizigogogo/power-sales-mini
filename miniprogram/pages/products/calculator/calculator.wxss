.container {
  padding: 30rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

/* 产品信息样式 */
.product-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-header {
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 8rpx;
}

.product-category {
  font-size: 24rpx;
  color: #969799;
}

.price-info, .capacity-info {
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-bottom: 1px solid #ebedf0;
}

.price-item, .capacity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.price-item:last-child, .capacity-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #646566;
}

.value {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

.product-desc {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.product-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.feature-tag {
  font-size: 24rpx;
  color: #1989fa;
  background: rgba(25, 137, 250, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 表单样式 */
.calculator-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 8rpx;
}

.form-actions {
  margin-top: 32rpx;
}

/* 结果样式 */
.result-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 24rpx;
}

.result-card {
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.result-header {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 16rpx;
}

.result-content {
  padding: 16rpx 0;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.tips {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #ebedf0;
}

.tip-text {
  font-size: 24rpx;
  color: #969799;
}

.result-actions {
  margin-top: 32rpx;
  display: flex;
  gap: 16rpx;
}

.result-actions .van-button {
  flex: 1;
}

.calculator-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 32rpx;
}

.calculator-header {
  margin-bottom: 32rpx;
  text-align: center;
}

.calculator-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.calculator-header .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.error-text {
  font-size: 24rpx;
  color: #ee0a24;
  margin-top: 8rpx;
}

.button-group {
  margin: 48rpx 0;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.saving-card {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  border-radius: 16rpx;
  padding: 32rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 32rpx;
}

.saving-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.saving-amount {
  margin-bottom: 16rpx;
}

.saving-amount .amount {
  font-size: 64rpx;
  font-weight: bold;
}

.saving-amount .unit {
  font-size: 32rpx;
  margin-left: 8rpx;
}

.saving-percent {
  font-size: 24rpx;
  opacity: 0.9;
}

.roi-card {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.roi-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.roi-item:last-child {
  margin-bottom: 0;
}

.roi-label {
  font-size: 28rpx;
  color: #666;
}

.roi-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.recommended-products {
  margin-top: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.product-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-saving {
  font-size: 24rpx;
  color: #07c160;
}

.share-button {
  position: fixed;
  bottom: 48rpx;
  left: 32rpx;
  right: 32rpx;
}

.share-btn {
  background: #07c160;
  color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  font-size: 32rpx;
}

.share-btn van-icon {
  margin-right: 16rpx;
}