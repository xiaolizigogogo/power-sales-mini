.calculator-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 32rpx;
}

.calculator-header {
  margin-bottom: 32rpx;
  text-align: center;
}

.calculator-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.calculator-header .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.error-text {
  font-size: 24rpx;
  color: #ee0a24;
  margin-top: 8rpx;
}

.button-group {
  margin: 48rpx 0;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-time {
  font-size: 24rpx;
  color: #999;
}

.saving-card {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  border-radius: 16rpx;
  padding: 32rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 32rpx;
}

.saving-title {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.saving-amount {
  margin-bottom: 16rpx;
}

.saving-amount .amount {
  font-size: 64rpx;
  font-weight: bold;
}

.saving-amount .unit {
  font-size: 32rpx;
  margin-left: 8rpx;
}

.saving-percent {
  font-size: 24rpx;
  opacity: 0.9;
}

.roi-card {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.roi-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.roi-item:last-child {
  margin-bottom: 0;
}

.roi-label {
  font-size: 28rpx;
  color: #666;
}

.roi-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.recommended-products {
  margin-top: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.product-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ee0a24;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.product-saving {
  font-size: 24rpx;
  color: #07c160;
}

.share-button {
  position: fixed;
  bottom: 48rpx;
  left: 32rpx;
  right: 32rpx;
}

.share-btn {
  background: #07c160;
  color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  font-size: 32rpx;
}

.share-btn van-icon {
  margin-right: 16rpx;
}