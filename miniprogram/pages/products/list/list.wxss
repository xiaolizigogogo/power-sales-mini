  color: #fff;
  background: #409eff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.compare-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  background: #409eff;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(64, 158, 255, 0.4);
}

.compare-count {
  background: #fff;
  color: #409eff;
  font-size: 24rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f3f4f6;
}

.search-input-wrap {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 36rpx;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 16rpx;
  margin: -16rpx;
}

.calculator-button {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(64, 158, 255, 0.1);
  border-radius: 32rpx;
}

.calculator-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.calculator-button text {
  font-size: 24rpx;
  color: #409EFF;
}

.category-scroll {
  background: #fff;
  border-bottom: 2rpx solid #f3f4f6;
}

.category-list {
  display: flex;
  padding: 20rpx 30rpx;
  white-space: nowrap;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #6b7280;
  background: #f3f4f6;
  border-radius: 32rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.category-item:last-child {
  margin-right: 0;
}

.category-item.active {
  color: #fff;
  background: #409EFF;
}

.product-list.loading {
  min-height: 400rpx;
}

.empty-container {
  padding: 120rpx 0;
}

.loading-container {
  padding: 60rpx 0;
}

.loading-more {
  padding: 20rpx 0;
  text-align: center;
} 