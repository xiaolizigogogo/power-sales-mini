.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 120rpx;
}

.search-bar {
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-tabs {
  background: #fff;
  margin-bottom: 20rpx;
}

.product-list {
  padding: 0 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.product-image {
  width: 100%;
  height: 300rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #999;
}

.price-value {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.product-tag {
  font-size: 24rpx;
  color: #fff;
  background: #409eff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.compare-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  background: #409eff;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(64, 158, 255, 0.4);
}

.compare-count {
  background: #fff;
  color: #409eff;
  font-size: 24rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f3f4f6;
}

.search-input-wrap {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 36rpx;
  padding: 0 24rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 16rpx;
  margin: -16rpx;
}

.calculator-button {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(64, 158, 255, 0.1);
  border-radius: 32rpx;
}

.calculator-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.calculator-button text {
  font-size: 24rpx;
  color: #409EFF;
}

.category-scroll {
  background: #fff;
  border-bottom: 2rpx solid #f3f4f6;
}

.category-list {
  display: flex;
  padding: 20rpx 30rpx;
  white-space: nowrap;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #6b7280;
  background: #f3f4f6;
  border-radius: 32rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.category-item:last-child {
  margin-right: 0;
}

.category-item.active {
  color: #fff;
  background: #409EFF;
}

.product-list.loading {
  min-height: 400rpx;
}

.empty-container {
  padding: 120rpx 0;
}

.loading-container {
  padding: 60rpx 0;
}

.loading-more {
  padding: 20rpx 0;
  text-align: center;
} 