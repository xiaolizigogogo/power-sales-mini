.loading-container {
  height: 100vh;
}

.not-login-container {
  height: 100vh;
  padding: 40rpx;
}

.welcome-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: var(--font-size-large);
  margin-bottom: 60rpx;
}

.logged-container {
  padding: 20rpx;
}

.user-card {
  margin-bottom: 30rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.grid-item {
  padding: 20rpx;
}

.grid-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.statistics-area {
  margin-top: 30rpx;
}

.stat-item {
  flex: 1;
  padding: 20rpx;
}

/* 首页样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 轮播图 */
.banner-section {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.banner-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  margin-bottom: 10rpx;
}

.banner-desc {
  font-size: var(--font-size-base);
  opacity: 0.9;
}

/* 搜索框 */
.search-container {
  padding: 20rpx;
  background-color: var(--bg-white);
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: var(--bg-light);
  border-radius: var(--border-radius-lg);
  padding: 24rpx 20rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: var(--text-muted);
}

.search-placeholder {
  flex: 1;
  font-size: var(--font-size-base);
  color: var(--text-muted);
}

/* 统计数据 */
.stats-section {
  background-color: var(--bg-white);
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 10rpx;
}

.stat-number {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* 产品分类 */
.category-section {
  background-color: var(--bg-white);
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.section-more {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: var(--border-radius-base);
  transition: var(--transition-base);
}

.category-item:active {
  background-color: var(--bg-light);
  transform: scale(0.95);
}

.category-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-light);
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.category-icon {
  font-size: 48rpx;
  line-height: 1;
}

.category-name {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 4rpx;
}

.category-count {
  font-size: var(--font-size-xs);
  color: var(--text-muted);
  text-align: center;
}

/* 快捷功能 */
.quick-actions {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-item {
  background: linear-gradient(135deg, #f5f7fa 0%, #f0f2f5 100%);
  padding: 30rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.98);
}

.action-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-icon {
  font-size: 40rpx;
}

.action-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

/* 我的服务 */
.my-services {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.service-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #e6f3ff 0%, #f0f9ff 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.service-icon {
  font-size: 44rpx;
}

.service-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 最新公告 */
.notice-section {
  background-color: var(--bg-white);
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}

.notice-list {
  margin-top: 20rpx;
}

.notice-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-badge {
  background-color: var(--error-color);
  color: white;
  font-size: var(--font-size-xs);
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius-sm);
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-content {
  flex: 1;
  margin-right: 16rpx;
}

.notice-title {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  margin-bottom: 8rpx;
  display: block;
}

.notice-time {
  font-size: var(--font-size-xs);
  color: var(--text-muted);
}

.notice-arrow {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
}

/* 热门产品 */
.hot-section {
  background-color: var(--bg-white);
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}

.more-icon {
  margin-left: 8rpx;
  font-size: var(--font-size-sm);
}

.product-list {
  margin-top: 20rpx;
}

.product-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: var(--border-radius-base);
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.product-tag {
  background-color: var(--primary-light);
  color: var(--primary-color);
  font-size: var(--font-size-xs);
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius-sm);
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.capacity-range {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.capacity-label {
  color: var(--text-muted);
}

.capacity-value {
  font-weight: 500;
}

.product-price {
  display: flex;
  align-items: baseline;
  color: var(--error-color);
}

.price-label {
  font-size: var(--font-size-xs);
  margin-right: 4rpx;
}

.price-symbol {
  font-size: var(--font-size-sm);
}

.price-value {
  font-size: var(--font-size-xl);
  font-weight: 600;
}

.price-unit {
  font-size: var(--font-size-sm);
  margin-left: 2rpx;
}

.product-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: var(--border-radius-base);
  font-size: var(--font-size-sm);
  border: none;
}

.action-btn.secondary {
  background-color: var(--bg-light);
  color: var(--text-primary);
}

.action-btn.primary {
  background-color: var(--primary-color);
  color: white;
}

/* 服务优势 */
.advantage-section {
  background-color: var(--bg-white);
