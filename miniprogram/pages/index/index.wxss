.loading-container {
  height: 100vh;
}

.not-login-container {
  height: 100vh;
  padding: 40rpx;
}

.welcome-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.welcome-text {
  font-size: var(--font-size-large);
  margin-bottom: 60rpx;
}

.logged-container {
  padding: 20rpx;
}

.user-card {
  margin-bottom: 30rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.grid-item {
  padding: 20rpx;
}

.grid-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.statistics-area {
  margin-top: 30rpx;
}

.stat-item {
  flex: 1;
  padding: 20rpx;
}

/* 首页样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 搜索框 */
.search-container {
  padding: 20rpx;
  background-color: var(--bg-white);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: var(--bg-light);
  border-radius: var(--border-radius-lg);
  padding: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: var(--text-muted);
}

.search-input {
  flex: 1;
  font-size: var(--font-size-base);
  color: var(--text-primary);
}

/* 产品分类 */
.category-section {
  padding: 30rpx 20rpx;
  background-color: var(--bg-white);
  margin-top: 20rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: var(--border-radius-base);
  transition: var(--transition-base);
}

.category-item:active {
  background-color: var(--bg-light);
  transform: scale(0.95);
}

.category-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  line-height: 1;
}

.category-name {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  text-align: center;
}

/* 快捷功能 */
.quick-actions {
  margin: 20rpx;
  background-color: var(--bg-white);
  border-radius: var(--border-radius-lg);
  padding: 30rpx 20rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  margin-top: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: var(--border-radius-base);
  transition: var(--transition-base);
}

.action-item:active {
  background-color: var(--bg-light);
  transform: scale(0.95);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  line-height: 1;
}

.action-name {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.2;
}

/* 热门产品 */
.hot-section {
  margin: 20rpx;
  background-color: var(--bg-white);
  border-radius: var(--border-radius-lg);
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.section-more {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

.more-icon {
  margin-left: 8rpx;
  font-size: var(--font-size-sm);
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  background-color: var(--bg-white);
  border-radius: var(--border-radius-base);
  padding: 20rpx;
  border: 2rpx solid var(--border-light);
  transition: var(--transition-base);
}

.product-item:active {
  border-color: var(--primary-color);
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-sm);
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--border-radius-base);
  background-color: var(--bg-light);
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.product-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.product-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.capacity-range {
  display: flex;
  align-items: center;
  font-size: var(--font-size-xs);
}

.capacity-label {
  color: var(--text-muted);
  margin-right: 8rpx;
}

.capacity-value {
  color: var(--text-secondary);
  font-weight: 500;
  background-color: var(--bg-light);
  padding: 4rpx 12rpx;
  border-radius: var(--border-radius-sm);
}

.product-price {
  display: flex;
  align-items: baseline;
}

.price-unit {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

.price-value {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--primary-color);
  margin: 0 4rpx;
}

/* 工具类 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 