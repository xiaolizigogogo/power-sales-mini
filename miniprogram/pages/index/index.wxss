}

.advantage-content {
  flex: 1;
}

.advantage-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  display: block;
}

.advantage-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

