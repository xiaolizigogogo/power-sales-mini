/* 搜索框 */
.search-box {
  padding: 20rpx 30rpx;
  background: var(--primary-color);
}

.search-bar {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--radius-large);
  padding: 0 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  color: var(--text-secondary);
  font-size: 28rpx;
}

/* 分类 */
.category-section {
  padding: 30rpx;
  background: #fff;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-regular);
}

/* 电费计算器 */
.calculator-section {
  margin: 30rpx;
  height: 160rpx;
  border-radius: var(--radius-large);
  overflow: hidden;
  position: relative;
}

.calculator-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.calculator-content {
  position: relative;
  z-index: 2;
  height: 100%;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.calculator-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.calculator-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 热门产品 */
.hot-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.section-more {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.more-icon {
  margin-left: 4rpx;
}

.product-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: var(--radius-base);
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  height: 200rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.product-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.price-value {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.price-unit {
  font-size: 24rpx;
  color: var(--primary-color);
} 